<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/rootview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical"
            tools:ignore="MissingConstraints">

            <include layout="@layout/action_bar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/allevents_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/allevents_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/StyleTextView"
                        android:text="@string/all_events"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="@dimen/font_size15"
                        android:padding="@dimen/padding10"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:textColorHint="@color/grayColorColor" />

                    <ImageView
                        android:id="@+id/allevents_line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding10"
                        android:scaleType="fitXY"
                        android:src="@drawable/tick_icon"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/upcoming_events_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/upcoming_events_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/StyleTextView"
                        android:layout_weight="1"
                        android:text="@string/upcoming_events"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size15"
                        android:padding="@dimen/padding10"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:textColorHint="@color/grayColorColor" />

                    <ImageView
                        android:id="@+id/upcoming_events_line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding10"
                        android:scaleType="fitXY"
                        android:src="@drawable/tick_icon"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/completed_events_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/completed_events_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/StyleTextView"
                        android:layout_weight="1"
                        android:text="@string/completed_events"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="@dimen/font_size15"
                        android:padding="@dimen/padding10"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:textColorHint="@color/grayColorColor" />

                    <ImageView
                        android:id="@+id/completed_events_line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding10"
                        android:scaleType="fitXY"
                        android:src="@drawable/tick_icon"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <include
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    layout="@layout/no_data_found_view"/>

                <include
                    layout="@layout/fragment_all_events" />

            </RelativeLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:theme="@style/StyleTextView"
                app:tabIndicatorFullWidth="true"
                app:tabGravity="fill"
                android:visibility="gone"
                app:tabTextAppearance="@dimen/font_size11"
                app:tabTextColor="@color/grayColorColor"
                app:tabIndicatorColor="@color/primaryColor"
                app:tabSelectedTextColor="@color/black"
                app:tabIndicatorHeight="2dp">

            </com.google.android.material.tabs.TabLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/tabLayout">

            </androidx.viewpager.widget.ViewPager>
            <!--<TextView
                android:id="@+id/text_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />-->

            <!--</LinearLayout>

        </ScrollView>-->

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>