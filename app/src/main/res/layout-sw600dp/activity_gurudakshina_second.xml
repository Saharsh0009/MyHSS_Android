<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/padding35"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/padding15"
                android:background="@drawable/payment_round_layout"
                android:paddingStart="@dimen/padding15"
                android:paddingEnd="@dimen/padding15"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/donate_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:text="@string/donate_amount"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/font_size15"
                    android:theme="@style/StyleTextView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/padding5"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    android:text="@string/pound_icon"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/font_size18"
                    android:theme="@style/StyleTextView" />

                <TextView
                    android:id="@+id/donate_amount_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/font_size18"
                    android:theme="@style/StyleTextView" />

                <ImageView
                    android:id="@+id/edit_payment"
                    android:layout_width="@dimen/padding20"
                    android:layout_height="@dimen/padding20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/padding10"
                    android:src="@drawable/payment_edit" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/font_size30"
                android:layout_margin="@dimen/font_size15"
                android:src="@drawable/payment_second_top" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding15"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginEnd="@dimen/padding15"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/giving_dakshina_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding10"
                    android:text="@string/are_you_giving_dakshina"
                    android:textColor="@color/grayColorColor"
                    android:textSize="@dimen/font_size15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="-20dp"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textAlignment="center"
                    android:textColor="@color/redColor"
                    android:theme="@style/StyleTextView"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginEnd="@dimen/font_size15"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/giving_dakshina_yes_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding10"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_round"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding60"
                        android:padding="@dimen/padding10">

                        <TextView
                            android:id="@+id/giving_dakshina_yes_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/yes"
                            android:textColor="@color/grayColorColor"
                            android:textSize="@dimen/font_size15"
                            android:theme="@style/StyleTextView" />

                        <ImageView
                            android:id="@+id/giving_dakshina_yes_icon"
                            android:layout_width="@dimen/padding25"
                            android:layout_height="@dimen/padding25"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/padding10"
                            android:src="@drawable/righttikmark_gray_icon" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/giving_dakshina_no_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding10"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_round"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding60"
                        android:padding="@dimen/padding10">

                        <TextView
                            android:id="@+id/giving_dakshina_no_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="@string/no"
                            android:textColor="@color/grayColorColor"
                            android:textSize="@dimen/font_size15"
                            android:theme="@style/StyleTextView" />

                        <ImageView
                            android:id="@+id/giving_dakshina_no_img"
                            android:layout_width="@dimen/padding25"
                            android:layout_height="@dimen/padding25"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/padding10"
                            android:src="@drawable/righttikmark_gray_icon" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding15"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginEnd="@dimen/padding15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/donating_individual_family"
                    android:textColor="@color/grayColorColor"
                    android:textSize="@dimen/font_size15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/padding10"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textAlignment="center"
                    android:textColor="@color/redColor"
                    android:theme="@style/StyleTextView"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginEnd="@dimen/font_size15"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/donating_individual_family_yes_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding10"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_round"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding60"
                        android:padding="@dimen/padding10">

                        <TextView
                            android:id="@+id/donating_individual_family_yes_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/donating_individual"
                            android:textColor="@color/grayColorColor"
                            android:textSize="@dimen/font_size15"
                            android:theme="@style/StyleTextView" />

                        <ImageView
                            android:id="@+id/donating_individual_family_yes_icon"
                            android:layout_width="@dimen/padding25"
                            android:layout_height="@dimen/padding25"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/padding10"
                            android:src="@drawable/righttikmark_gray_icon" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/donating_individual_family_no_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding10"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_round"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding60"
                        android:padding="@dimen/padding10">

                        <TextView
                            android:id="@+id/donating_individual_family_no_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="@string/donating_family"
                            android:textColor="@color/grayColorColor"
                            android:textSize="@dimen/font_size15"
                            android:theme="@style/StyleTextView" />

                        <ImageView
                            android:id="@+id/donating_individual_family_no_img"
                            android:layout_width="@dimen/padding25"
                            android:layout_height="@dimen/padding25"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/padding10"
                            android:src="@drawable/righttikmark_gray_icon" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding15"
                    android:layout_marginEnd="@dimen/padding15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gift_aid_declaration"
                        android:textColor="@color/grayColorColor"
                        android:textSize="@dimen/font_size15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/padding10"
                        android:gravity="center_vertical"
                        android:text="*"
                        android:textAlignment="center"
                        android:textColor="@color/redColor"
                        android:theme="@style/StyleTextView"
                        tools:ignore="RtlCompat" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/tooltip_view"
                    android:layout_width="@dimen/padding20"
                    android:layout_height="@dimen/padding20"
                    android:layout_marginStart="@dimen/padding10"
                    android:src="@drawable/infoyellow" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/gift_aid_select_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginTop="@dimen/padding5"
                android:layout_marginEnd="@dimen/font_size15"
                android:background="@drawable/edit_primery_color_round">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/EditText.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding25"
                    app:boxStrokeColor="@color/primaryColor"
                    tools:ignore="RtlSymmetry">

                    <Spinner
                        android:id="@+id/gift_aid_select_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="-10dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/relationship_primery"
                        android:tag="@string/occupation_select_other"
                        android:textColor="@color/blackColor"
                        android:textColorHint="@color/grayColorColor"
                        android:theme="@style/StyleEditTextView" />

                    <!--<com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        style="@android:style/Widget.Spinner.DropDown"
                        android:theme="@style/StyleEditTextView"
                        android:id="@+id/gift_aid_select_txt"
                        android:hint="@string/relationship_primery"
                        android:background="@android:color/transparent"
                        android:textColor="@color/blackColor"
                        android:layout_marginTop="-5dp"
                        android:tag="@string/occupation_select_other"
                        android:textColorHint="@color/grayColorColor"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent" />-->

                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:layout_width="@dimen/padding10"
                    android:layout_height="@dimen/padding10"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/padding5"
                    android:layout_marginEnd="@dimen/padding20"
                    android:src="@drawable/arrow_drop_down" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/padding5"
                    android:layout_marginEnd="@dimen/padding10"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/back_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/button_orange_round"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/padding35"
                        android:paddingEnd="@dimen/padding35">

                        <ImageView
                            android:layout_width="@dimen/padding15"
                            android:layout_height="@dimen/padding20"
                            android:src="@drawable/prevarrowblue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sourcesanspro_regular"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="@string/prev"
                            android:textColor="@color/primaryColor"
                            android:textSize="18sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/padding10"
                    android:layout_marginEnd="@dimen/padding10"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/next_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/button_round"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/padding35"
                        android:paddingEnd="@dimen/padding35">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sourcesanspro_regular"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="@string/next"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="@dimen/padding15"
                            android:layout_height="@dimen/padding20"
                            android:src="@drawable/nextarrowwhite" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding20"
                android:layout_below="@+id/submit_layout" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>