<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/padding10"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding10"
                android:paddingEnd="@dimen/padding10"
                android:text="@string/title"
                android:textColor="@color/grayColorColor"
                android:textSize="@dimen/font_size18"
                android:textStyle="bold"
                android:theme="@style/StyleTextView" />

            <TextView
                android:id="@+id/suchna_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding10"
                android:paddingEnd="@dimen/padding10"
                android:text="@string/app_name"
                android:textColor="@color/orangeColor"
                android:textSize="@dimen/font_size35"
                android:textStyle="bold"
                android:theme="@style/StyleTextView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding5"
                android:paddingStart="@dimen/padding10"
                android:paddingEnd="@dimen/padding10"
                android:text="@string/date_and_time"
                android:textColor="@color/grayColorColor"
                android:textSize="@dimen/font_size18"
                android:textStyle="bold"
                android:theme="@style/StyleTextView" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding10"
                android:paddingEnd="@dimen/padding10"
                android:text="@string/date_and_time"
                android:textColor="@color/offBlackColor"
                android:textSize="@dimen/font_size18"
                android:theme="@style/StyleTextView" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding5"
                android:paddingStart="@dimen/padding10"
                android:paddingEnd="@dimen/padding10"
                android:text="@string/discription"
                android:textColor="@color/grayColorColor"
                android:textSize="@dimen/font_size18"
                android:textStyle="bold"
                android:theme="@style/StyleTextView" />

            <TextView
                android:id="@+id/suchna_discription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding10"
                android:paddingEnd="@dimen/padding10"
                android:text="@string/app_name"
                android:textColor="@color/offBlackColor"
                android:textSize="@dimen/font_size25"
                android:theme="@style/StyleTextView" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>