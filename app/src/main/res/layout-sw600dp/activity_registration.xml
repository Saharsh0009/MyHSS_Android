<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context="com.myhss.Login_Registration.RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line_view"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding130"
                android:background="@color/primaryColor" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/athlete_img"
                android:layout_width="@dimen/padding110"
                android:layout_height="@dimen/padding110"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-50dp"
                android:background="@drawable/app_logo"
                android:padding="10dp"
                app:civ_border_color="@color/black"
                app:civ_border_width="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding50"
                android:layout_marginTop="@dimen/padding30"
                android:layout_marginEnd="@dimen/padding50"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding15"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:text="@string/register"
                        android:textSize="@dimen/font_size25"
                        android:theme="@style/StyleTextView" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|center"
                        android:orientation="vertical"
                        android:padding="@dimen/padding15">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/padding30"
                                android:layout_height="@dimen/padding30"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/first_name" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_firstname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edit_firstname"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:fontFamily="@font/sourcesanspro_regular"
                                    android:hint="@string/firstname"
                                    android:inputType="text"
                                    android:textColor="@color/blackColor"
                                    android:textColorHint="@color/grayColorColor"
                                    android:textSize="@dimen/font_size18"
                                    android:theme="@style/StyleEditTextView" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/padding30"
                                android:layout_height="@dimen/padding30"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/last_name" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_surname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edit_surname"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:fontFamily="@font/sourcesanspro_regular"
                                    android:hint="@string/surname"
                                    android:inputType="text"
                                    android:textColor="@color/blackColor"
                                    android:textColorHint="@color/grayColorColor"
                                    android:textSize="@dimen/font_size18"
                                    android:theme="@style/StyleEditTextView" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/padding10"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:text="@string/login_details_register"
                        android:textColor="@color/blue_Color"
                        android:textSize="@dimen/font_size25"
                        android:theme="@style/StyleTextView" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding10"
                        android:layout_marginTop="@dimen/padding15"
                        android:layout_marginEnd="@dimen/padding10"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/padding30"
                            android:layout_height="@dimen/padding30"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/user_img" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_username"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/sourcesanspro_regular"
                                android:hint="@string/username"
                                android:inputType="text"
                                android:textColor="@color/blackColor"
                                android:textColorHint="@color/grayColorColor"
                                android:textSize="@dimen/font_size18"
                                android:theme="@style/StyleEditTextView" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/font_size15"
                        android:layout_marginTop="@dimen/padding10"
                        android:layout_marginEnd="@dimen/font_size15"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:text="@string/user_note_register"
                        android:textColor="@color/text_hint_color"
                        android:textSize="@dimen/font_size15"
                        android:theme="@style/StyleTextView" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding10"
                        android:layout_marginEnd="@dimen/padding10"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/padding30"
                            android:layout_height="@dimen/padding30"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/email_img" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_email"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/sourcesanspro_regular"
                                android:hint="@string/email_address"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/blackColor"
                                android:textColorHint="@color/grayColorColor"
                                android:textSize="@dimen/font_size18"
                                android:theme="@style/StyleEditTextView" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding10"
                        android:layout_marginEnd="@dimen/padding10"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/padding30"
                            android:layout_height="@dimen/padding30"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/lock_dark" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            app:passwordToggleEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_password"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890~!@#$%^_+\|"
                                android:fontFamily="@font/sourcesanspro_regular"
                                android:hint="@string/password"
                                android:inputType="textPassword"
                                android:textColor="@color/blackColor"
                                android:textColorHint="@color/grayColorColor"
                                android:textSize="@dimen/font_size18"
                                android:theme="@style/StyleEditTextView" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding10"
                        android:layout_marginEnd="@dimen/padding10"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/padding30"
                            android:layout_height="@dimen/padding30"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/lock_dark" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_confirmpassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            app:passwordToggleEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_confirmpassword"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890~!@#$%^_+\|"
                                android:fontFamily="@font/sourcesanspro_regular"
                                android:hint="@string/confirm_password"
                                android:inputType="textPassword"
                                android:textColor="@color/blackColor"
                                android:textColorHint="@color/grayColorColor"
                                android:textSize="@dimen/font_size18"
                                android:theme="@style/StyleEditTextView" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/font_size15"
                        android:layout_marginTop="@dimen/padding10"
                        android:layout_marginEnd="@dimen/font_size15"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:text="@string/password_note_register"
                        android:textColor="@color/text_hint_color"
                        android:textSize="@dimen/font_size15"
                        android:theme="@style/StyleTextView" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/padding50"
                android:layout_marginTop="@dimen/padding20"
                android:layout_marginEnd="@dimen/padding50"
                android:gravity="center_horizontal">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="@dimen/padding35"
                    android:layout_height="@dimen/padding35"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/custom_checkbox"
                    android:button="@null"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/already_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding20"
                    android:layout_toEndOf="@+id/checkbox"
                    android:autoLink="web"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:gravity="center_vertical"
                    android:linksClickable="true"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/font_size15"
                    android:textStyle="bold" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/padding50"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="@dimen/padding50">

                <TextView
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_round"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:gravity="center"
                    android:padding="12dp"
                    android:paddingStart="@dimen/padding75"
                    android:paddingEnd="@dimen/padding75"
                    android:text="@string/register"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size25" />

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding20" />

        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/registration_layout"
        android:background="@color/lightGrayColor" />

    <RelativeLayout
        android:id="@+id/registration_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/font_size15"
        android:gravity="center|bottom">

        <TextView
            android:id="@+id/already_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toStartOf="@+id/registration_btn"
            android:layout_toLeftOf="@+id/registration_btn"
            android:fontFamily="@font/sourcesanspro_regular"
            android:text="@string/already_user"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/font_size18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/registration_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/padding5"
            android:layout_marginTop="20dp"
            android:text="@string/login"
            android:textColor="@color/blueColor"
            android:textSize="@dimen/font_size18"
            android:textStyle="bold" />

    </RelativeLayout>

    <!--    <include layout="@layout/registrationsuccessactivity" />-->

</RelativeLayout>