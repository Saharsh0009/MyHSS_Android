    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/padding10"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:weightSum="2" >

        <RelativeLayout
            android:id="@+id/clear_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="@dimen/padding10"
            android:background="@drawable/edittext_round"
            android:padding="8dp" >

            <ImageView
                android:layout_width="@dimen/padding25"
                android:layout_height="@dimen/padding25"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/padding35"
                android:src="@drawable/clear_icon" />

        <TextView
            android:id="@+id/clear_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_txt"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/padding5"
            android:layout_marginStart="@dimen/padding35"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size18"
            android:theme="@style/StyleTextView" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/support_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="@dimen/padding10"
            android:background="@drawable/button_orange_round"
            android:padding="8dp" >

        <ImageView
            android:layout_width="@dimen/padding25"
            android:layout_height="@dimen/padding25"
            android:layout_marginEnd="@dimen/padding35"
            android:layout_centerVertical="true"
            android:src="@drawable/support_lock_icon" />

        <TextView
            android:id="@+id/support_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/support"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/padding5"
            android:paddingStart="@dimen/padding35"
            android:textSize="@dimen/font_size15"
            android:theme="@style/StyleTextView" />

        </RelativeLayout>

