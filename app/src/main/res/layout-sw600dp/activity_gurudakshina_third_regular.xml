<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/padding35"
                android:layout_marginTop="@dimen/padding15"
                android:paddingStart="@dimen/padding15"
                android:paddingEnd="@dimen/padding15"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/payment_round_layout"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/donate_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/donate_amount"
                    android:layout_gravity="center_vertical"
                    android:theme="@style/StyleTextView"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:textSize="@dimen/font_size15"
                    android:textColor="@color/blackColor" />

                <TextView
                    android:id="@+id/donate_amount_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pound_icon"
                    android:layout_marginStart="@dimen/padding5"
                    android:layout_gravity="center_vertical"
                    android:theme="@style/StyleTextView"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    android:textSize="@dimen/font_size18"
                    android:textColor="@color/blackColor" />

                <ImageView
                    android:id="@+id/edit_payment"
                    android:layout_width="@dimen/padding20"
                    android:layout_height="@dimen/padding20"
                    android:layout_marginStart="@dimen/padding10"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/payment_edit" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/font_size30"
                android:layout_margin="@dimen/font_size15"
                android:src="@drawable/payment_third_top" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/billing_information"
                android:textSize="@dimen/font_size25"
                android:layout_margin="@dimen/font_size15"
                android:textColor="@color/blackColor" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/padding15"
                android:layout_marginStart="@dimen/padding15"
                android:layout_marginTop="@dimen/padding10" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayColorColor"
                android:textAllCaps="true"
                android:textSize="@dimen/font_size15"
                android:text="@string/address" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/StyleTextView"
                android:text="*"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/padding10"
                android:textColor="@color/redColor"
                tools:ignore="RtlCompat" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginEnd="@dimen/font_size15"
                android:background="@drawable/edit_primery_color_round"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/primaryColor"
                        style="@style/EditText.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:theme="@style/StyleEditTextView"
                            android:id="@+id/edit_address"
                            android:inputType="text"
                            android:layout_marginTop="-5dp"
                            android:maxLength="19"
                            android:editable="false"
                            android:focusable="false"
                            android:background="@android:color/transparent"
                            android:textColor="@color/blackColor"
                            android:textColorHint="@color/grayColorColor"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/card_number_valid"
                        android:layout_width="@dimen/padding20"
                        android:layout_height="@dimen/padding20"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/padding10"
                        android:visibility="invisible"
                        android:src="@drawable/right_green" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginStart="@dimen/padding15"
                android:layout_marginEnd="@dimen/padding15" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayColorColor"
                android:textSize="@dimen/font_size15"
                android:text="@string/city" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/StyleTextView"
                android:text="*"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/padding10"
                android:textColor="@color/redColor"
                tools:ignore="RtlCompat" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginEnd="@dimen/font_size15"
                android:background="@drawable/edit_primery_color_round"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/primaryColor"
                        style="@style/EditText.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:theme="@style/StyleEditTextView"
                            android:id="@+id/edit_city"
                            android:inputType="text|textCapWords"
                            android:layout_marginTop="-5dp"
                            android:editable="false"
                            android:focusable="false"
                            android:background="@android:color/transparent"
                            android:textColor="@color/blackColor"
                            android:textColorHint="@color/grayColorColor"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent" />

                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/padding15"
                android:layout_marginStart="@dimen/padding15"
                android:layout_marginTop="@dimen/padding10" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayColorColor"
                android:textSize="@dimen/font_size15"
                android:text="@string/country" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/StyleTextView"
                android:text="*"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/padding10"
                android:textColor="@color/redColor"
                tools:ignore="RtlCompat" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginEnd="@dimen/font_size15"
                android:background="@drawable/edit_primery_color_round"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/primaryColor"
                        style="@style/EditText.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:theme="@style/StyleEditTextView"
                            android:id="@+id/edit_country"
                            android:inputType="text|textCapWords"
                            android:layout_marginTop="-5dp"
                            android:editable="false"
                            android:focusable="false"
                            android:background="@android:color/transparent"
                            android:textColor="@color/blackColor"
                            android:textColorHint="@color/grayColorColor"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent" />

                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginStart="@dimen/padding15"
                android:layout_marginEnd="@dimen/padding15" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayColorColor"
                android:textSize="@dimen/font_size15"
                android:text="@string/postcode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/StyleTextView"
                android:text="*"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/padding10"
                android:textColor="@color/redColor"
                tools:ignore="RtlCompat" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginEnd="@dimen/font_size15"
                android:background="@drawable/edit_primery_color_round"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/primaryColor"
                        style="@style/EditText.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:theme="@style/StyleEditTextView"
                            android:id="@+id/edit_postcode"
                            android:inputType="text"
                            android:editable="false"
                            android:focusable="false"
                            android:layout_marginTop="-5dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/blackColor"
                            android:textColorHint="@color/grayColorColor"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent" />

                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginEnd="@dimen/font_size15"
                android:layout_marginTop="@dimen/padding15"
                android:textSize="@dimen/font_size18"
                android:text="@string/disclaimer_notify" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginEnd="@dimen/font_size15"
                android:layout_marginTop="@dimen/padding10" >

                <ImageView
                    android:layout_width="@dimen/padding10"
                    android:layout_height="@dimen/padding10"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/dot_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/padding10"
                    android:textSize="@dimen/font_size18"
                    android:text="@string/disclaimer_want_cancel" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginEnd="@dimen/font_size15"
                android:layout_marginTop="@dimen/padding10" >

                <ImageView
                    android:layout_width="@dimen/padding10"
                    android:layout_height="@dimen/padding10"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/dot_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/padding10"
                    android:textSize="@dimen/font_size18"
                    android:text="@string/disclaimer_change_name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginEnd="@dimen/font_size15"
                android:layout_marginTop="@dimen/padding10" >

                <ImageView
                    android:layout_width="@dimen/padding10"
                    android:layout_height="@dimen/padding10"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/dot_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/padding10"
                    android:textSize="@dimen/font_size18"
                    android:text="@string/disclaimer_no_longer" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding10"
                    android:layout_marginEnd="@dimen/padding10"
                    android:layout_weight="1"
                    android:layout_gravity="center" >

                    <LinearLayout
                        android:id="@+id/next_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:background="@drawable/button_round"
                        android:paddingStart="@dimen/padding35"
                        android:paddingEnd="@dimen/padding35" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="@string/request"
                            android:fontFamily="@font/sourcesanspro_regular"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding10"
                    android:layout_marginStart="@dimen/padding10"
                    android:layout_marginEnd="@dimen/padding10"
                    android:layout_weight="1"
                    android:layout_gravity="center" >

                    <LinearLayout
                        android:id="@+id/back_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:background="@drawable/button_orange_round"
                        android:paddingStart="@dimen/padding35"
                        android:paddingEnd="@dimen/padding35" >

                        <ImageView
                            android:layout_width="@dimen/padding15"
                            android:layout_height="@dimen/padding20"
                            android:src="@drawable/prevarrowblue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="@string/prev"
                            android:fontFamily="@font/sourcesanspro_regular"
                            android:textColor="@color/primaryColor"
                            android:textSize="18sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_below="@+id/submit_layout"
                android:layout_height="@dimen/padding20" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>