<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding10"
            android:paddingEnd="@dimen/padding10">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding65"
                android:layout_margin="@dimen/font_size15"
                android:src="@drawable/addmemberstep2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/font_size15"
                android:text="@string/contact_infomation"
                android:textColor="@color/blackColor"
                android:textSize="@dimen/font_size30"
                android:theme="@style/StyleTextView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding10"
                    android:layout_marginEnd="@dimen/padding10"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/padding15"
                            android:layout_marginTop="@dimen/padding10"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/primary_contact_number"
                                android:textColor="@color/grayColorColor"
                                android:textSize="@dimen/font_size25"
                                android:theme="@style/StyleTextView" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/padding10"
                                android:gravity="center_vertical"
                                android:text="*"
                                android:textAlignment="center"
                                android:textColor="@color/redColor"
                                android:textSize="@dimen/font_size25"
                                android:theme="@style/StyleTextView"
                                tools:ignore="RtlCompat" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/font_size15"
                            android:layout_marginTop="@dimen/padding10"
                            android:layout_marginEnd="@dimen/font_size15"
                            android:background="@drawable/edittext_round"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/til_primary_number"
                                    style="@style/EditText.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    app:boxStrokeColor="@color/primaryColor"
                                    app:errorIconDrawable="@null">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edit_primary_contact_number"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@android:color/transparent"
                                        android:cursorVisible="true"
                                        android:inputType="number"
                                        android:maxLength="13"
                                        android:textColor="@color/blackColor"
                                        android:textColorHint="@color/grayColorColor"
                                        android:textCursorDrawable="@null"
                                        android:textSize="@dimen/font_size25"
                                        android:theme="@style/StyleEditTextView" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/font_size15"
                            android:layout_marginTop="@dimen/padding10"
                            android:text="@string/secondary_contact_number"
                            android:textColor="@color/grayColorColor"
                            android:textSize="@dimen/font_size25" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/font_size15"
                            android:layout_marginTop="@dimen/padding10"
                            android:layout_marginEnd="@dimen/font_size15"
                            android:background="@drawable/edittext_round"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/til_second_number"
                                    style="@style/EditText.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    app:boxStrokeColor="@color/primaryColor"
                                    app:errorIconDrawable="@null">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edit_secondary_contact_number"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@android:color/transparent"
                                        android:cursorVisible="true"
                                        android:inputType="number"
                                        android:maxLength="13"
                                        android:textColor="@color/blackColor"
                                        android:textColorHint="@color/grayColorColor"
                                        android:textCursorDrawable="@null"
                                        android:textSize="@dimen/font_size25"
                                        android:theme="@style/StyleEditTextView" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/font_size15"
                            android:layout_marginTop="@dimen/padding10"
                            android:text="@string/secondary_email"
                            android:textColor="@color/grayColorColor"
                            android:textSize="@dimen/font_size25" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/font_size15"
                            android:layout_marginTop="@dimen/padding10"
                            android:layout_marginEnd="@dimen/font_size15"
                            android:background="@drawable/edittext_round"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/til_second_email"
                                    style="@style/EditText.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    app:boxStrokeColor="@color/primaryColor"
                                    app:errorIconDrawable="@null">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/edit_secondary_email"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@android:color/transparent"
                                        android:cursorVisible="true"
                                        android:inputType="textEmailAddress"
                                        android:textColor="@color/blackColor"
                                        android:textColorHint="@color/grayColorColor"
                                        android:textCursorDrawable="@null"
                                        android:textSize="@dimen/font_size25"
                                        android:theme="@style/StyleEditTextView" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding10"
                    android:layout_marginEnd="@dimen/padding10"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/font_size15"
                        android:layout_marginTop="@dimen/padding10"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:text="@string/find_address"
                        android:textColor="@color/grayColorColor"
                        android:textSize="@dimen/font_size25"
                        android:theme="@style/StyleTextView" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/font_size15"
                        android:layout_marginTop="@dimen/padding10"
                        android:layout_marginEnd="@dimen/font_size15"
                        android:background="@drawable/gray_round_border"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/padding10"
                        android:paddingTop="@dimen/padding20"
                        android:paddingEnd="@dimen/padding10"
                        android:paddingBottom="@dimen/padding20">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/whats_your_postcode"
                                android:textColor="@color/grayColorColor"
                                android:textSize="@dimen/font_size15" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/padding10"
                                android:gravity="center_vertical"
                                android:text="*"
                                android:textAlignment="center"
                                android:textColor="@color/redColor"
                                android:textSize="@dimen/font_size25"
                                android:theme="@style/StyleTextView"
                                tools:ignore="RtlCompat" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding10"
                            android:background="@drawable/grayround_border">

                            <ImageView
                                android:layout_width="@dimen/padding70"
                                android:layout_height="@dimen/padding70"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:padding="@dimen/padding5"
                                android:src="@drawable/locationfull" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_postcode"
                                style="@style/EditText.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/padding55"
                                android:layout_marginEnd="@dimen/padding55"
                                android:gravity="center_vertical"
                                app:boxStrokeColor="@color/primaryColor"
                                app:errorIconDrawable="@null">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edit_find_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:cursorVisible="true"
                                    android:inputType="text"
                                    android:textColor="@color/blackColor"
                                    android:textColorHint="@color/grayColorColor"
                                    android:textCursorDrawable="@null"
                                    android:textSize="@dimen/font_size25"
                                    android:theme="@style/StyleEditTextView" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <ImageView
                                android:id="@+id/find_address"
                                android:layout_width="@dimen/padding70"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/right_bottom_primery_color"
                                android:padding="@dimen/font_size18"
                                android:src="@drawable/nextarrowwhite" />

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/full_address_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/font_size15"
                        android:layout_marginEnd="@dimen/font_size15"
                        android:background="@drawable/gray_round_border"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/padding10"
                        android:paddingTop="@dimen/padding20"
                        android:paddingEnd="@dimen/padding10"
                        android:paddingBottom="@dimen/padding20"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/font_size15"
                                android:layout_marginTop="@dimen/padding10"
                                android:text="@string/select_address"
                                android:textColor="@color/grayColorColor"
                                android:textSize="@dimen/font_size25"
                                android:theme="@style/StyleTextView" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/font_size15"
                                android:layout_marginTop="@dimen/padding10"
                                android:layout_marginEnd="@dimen/font_size15"
                                android:background="@drawable/edittext_round"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:id="@+id/select_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">


                                    <TextView
                                        android:id="@+id/edit_select_address"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/padding80"
                                        android:background="@android:color/transparent"
                                        android:ellipsize="end"
                                        android:gravity="center_vertical"
                                        android:inputType="text"
                                        android:padding="@dimen/padding10"
                                        android:paddingEnd="@dimen/padding70"
                                        android:textColor="@color/blackColor"
                                        android:textColorHint="@color/grayColorColor"
                                        android:textSize="@dimen/font_size25" />


                                    <ImageView
                                        android:layout_width="@dimen/padding20"
                                        android:layout_height="@dimen/padding20"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="@dimen/padding20"
                                        android:src="@drawable/arrow_drop_down" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/font_size15"
                                    android:layout_marginTop="@dimen/padding10"
                                    android:text="@string/building_name"
                                    android:textColor="@color/grayColorColor"
                                    android:textSize="@dimen/font_size25"
                                    android:theme="@style/StyleTextView" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/font_size15"
                                    android:layout_marginTop="@dimen/padding10"
                                    android:layout_marginEnd="@dimen/font_size15"
                                    android:background="@drawable/edittext_round"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:id="@+id/realationship_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:id="@+id/til_edit_building_name"
                                            style="@style/EditText.OutlinedBox"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_vertical"
                                            app:boxStrokeColor="@color/primaryColor"
                                            app:errorIconDrawable="@null"
                                            tools:ignore="RtlSymmetry">

                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/edit_building_name"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@android:color/transparent"
                                                android:cursorVisible="true"
                                                android:inputType="textPostalAddress"
                                                android:textColor="@color/blackColor"
                                                android:textColorHint="@color/grayColorColor"
                                                android:textCursorDrawable="@null"
                                                android:textSize="@dimen/font_size25"
                                                android:theme="@style/StyleEditTextView" />

                                        </com.google.android.material.textfield.TextInputLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/padding15"
                                    android:layout_marginTop="@dimen/padding10"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/address_line1"
                                        android:textColor="@color/grayColorColor"
                                        android:textSize="@dimen/font_size25"
                                        android:theme="@style/StyleTextView" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="@dimen/padding10"
                                        android:gravity="center_vertical"
                                        android:text="*"
                                        android:textAlignment="center"
                                        android:textColor="@color/redColor"
                                        android:textSize="@dimen/font_size25"
                                        android:theme="@style/StyleTextView"
                                        tools:ignore="RtlCompat" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/font_size15"
                                    android:layout_marginTop="@dimen/padding10"
                                    android:layout_marginEnd="@dimen/font_size15"
                                    android:background="@drawable/edittext_round"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:id="@+id/occupation_select_other"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:id="@+id/til_edit_address_line1"
                                            style="@style/EditText.OutlinedBox"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_vertical"
                                            app:boxStrokeColor="@color/primaryColor"
                                            app:errorIconDrawable="@null"
                                            tools:ignore="RtlSymmetry">

                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/edit_address_line1"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@android:color/transparent"
                                                android:cursorVisible="true"
                                                android:inputType="textPostalAddress"
                                                android:textColor="@color/blackColor"
                                                android:textColorHint="@color/grayColorColor"
                                                android:textCursorDrawable="@null"
                                                android:textSize="@dimen/font_size25"
                                                android:theme="@style/StyleEditTextView" />

                                        </com.google.android.material.textfield.TextInputLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/font_size15"
                                    android:layout_marginTop="@dimen/padding10"
                                    android:text="@string/address_line2"
                                    android:textColor="@color/grayColorColor"
                                    android:textSize="@dimen/font_size25"
                                    android:theme="@style/StyleTextView" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/font_size15"
                                    android:layout_marginTop="@dimen/padding10"
                                    android:layout_marginEnd="@dimen/font_size15"
                                    android:background="@drawable/edittext_round"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:id="@+id/vibhag_region"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:id="@+id/til_edit_address_line2"
                                            style="@style/EditText.OutlinedBox"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_vertical"
                                            app:boxStrokeColor="@color/primaryColor"
                                            app:errorIconDrawable="@null"
                                            tools:ignore="RtlSymmetry">

                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/edit_address_line2"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@android:color/transparent"
                                                android:cursorVisible="true"
                                                android:inputType="textPostalAddress"
                                                android:textColor="@color/blackColor"
                                                android:textColorHint="@color/grayColorColor"
                                                android:textCursorDrawable="@null"
                                                android:textSize="@dimen/font_size25"
                                                android:theme="@style/StyleEditTextView" />

                                        </com.google.android.material.textfield.TextInputLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/padding15"
                                    android:layout_marginTop="@dimen/padding10"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/town_city"
                                        android:textColor="@color/grayColorColor"
                                        android:textSize="@dimen/font_size25"
                                        android:theme="@style/StyleTextView" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="@dimen/padding10"
                                        android:gravity="center_vertical"
                                        android:text="*"
                                        android:textAlignment="center"
                                        android:textColor="@color/redColor"
                                        android:textSize="@dimen/font_size25"
                                        android:theme="@style/StyleTextView"
                                        tools:ignore="RtlCompat" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/font_size15"
                                    android:layout_marginTop="@dimen/padding10"
                                    android:layout_marginEnd="@dimen/font_size15"
                                    android:background="@drawable/edittext_round"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:id="@+id/nagar_town"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:id="@+id/til_edit_town_city"
                                            style="@style/EditText.OutlinedBox"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_vertical"
                                            app:boxStrokeColor="@color/primaryColor"
                                            app:errorIconDrawable="@null"
                                            tools:ignore="RtlSymmetry">

                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/edit_town_city"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@android:color/transparent"
                                                android:cursorVisible="true"
                                                android:inputType="text"
                                                android:textColor="@color/blackColor"
                                                android:textColorHint="@color/grayColorColor"
                                                android:textCursorDrawable="@null"
                                                android:textSize="@dimen/font_size25"
                                                android:theme="@style/StyleEditTextView" />

                                        </com.google.android.material.textfield.TextInputLayout>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/padding20"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/padding30">

                    <LinearLayout
                        android:id="@+id/back_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/button_orange_round"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/padding70"
                        android:paddingEnd="@dimen/padding70">

                        <ImageView
                            android:layout_width="@dimen/padding25"
                            android:layout_height="@dimen/padding30"
                            android:src="@drawable/prevarrowblue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sourcesanspro_regular"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="@string/prev"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/font_size25"
                            android:theme="@style/StyleTextView" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/padding30"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/padding20">

                    <LinearLayout
                        android:id="@+id/next_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/button_round"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/padding70"
                        android:paddingEnd="@dimen/padding70">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sourcesanspro_regular"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="@string/next"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size25"
                            android:theme="@style/StyleTextView" />

                        <ImageView
                            android:layout_width="@dimen/padding25"
                            android:layout_height="@dimen/padding30"
                            android:src="@drawable/nextarrowwhite" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding20" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>