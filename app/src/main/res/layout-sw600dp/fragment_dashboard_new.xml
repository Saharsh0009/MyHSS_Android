            android:horizontalSpacing="1dp"
            android:nestedScrollingEnabled="true"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="1dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGrayColor" />

        <RelativeLayout
            android:id="@+id/other_hide_show_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray_background"
            android:padding="@dimen/padding10"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/padding5"
                android:text="@string/my_other"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size15"
                android:textStyle="bold"
                android:theme="@style/StyleTextView"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/other_hide"
                android:layout_width="@dimen/padding20"
                android:layout_height="@dimen/padding20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/padding5"
                android:src="@drawable/drop_up_icon"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGrayColor"
            android:visibility="gone" />

        <com.myhss.Utils.ScrollableGridView
            android:id="@+id/other_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fastScrollEnabled="true"
            android:gravity="center"
            android:horizontalSpacing="1dp"
            android:nestedScrollingEnabled="true"
            android:numColumns="3"
