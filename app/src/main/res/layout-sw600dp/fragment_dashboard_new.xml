            android:background="@color/lightGrayColor" />-->

        <RelativeLayout
            android:id="@+id/reports_hide_show_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray_background"
            android:padding="@dimen/padding10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/padding5"
                android:text="@string/reports"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size25"
                android:textStyle="bold"
                android:theme="@style/StyleTextView"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:layout_width="@dimen/padding30"
                android:layout_height="@dimen/padding20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/padding5"
                android:src="@drawable/drop_up_icon"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGrayColor" />-->

        <com.myhss.Utils.ScrollableGridView
            android:id="@+id/reports_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fastScrollEnabled="true"
            android:gravity="center"
            android:horizontalSpacing="1dp"
            android:nestedScrollingEnabled="true"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="1dp" />

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGrayColor" />-->

        <RelativeLayout
            android:id="@+id/member_hide_show_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray_background"
            android:padding="@dimen/padding10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/padding5"
                android:text="@string/membership_applications"
                android:textColor="@color/black"
