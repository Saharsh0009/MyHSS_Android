<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <!-- Main Activity -->
    <LinearLayout
        android:id="@+id/main_activity_content_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/activity_main_appbarlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding60"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/activity_main_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding60"
                android:background="?attr/colorPrimary"
                android:weightSum="1"
                app:contentInsetStart="0dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <ImageView
                    android:id="@+id/toolbar_logo"
                    android:layout_width="@dimen/padding140"
                    android:layout_height="@dimen/padding50"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/dashboard_logo"
                    android:visibility="gone" />

                <!--                <TextView-->
                <!--                    android:id="@+id/activity_main_toolbar_title"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_gravity="center"-->
                <!--                    android:ellipsize="marquee"-->
                <!--                    android:fadingEdge="horizontal"-->
                <!--                    android:focusable="true"-->
                <!--                    android:textAlignment="center"-->
                <!--                    android:focusableInTouchMode="true"-->
                <!--                    android:marqueeRepeatLimit="marquee_forever"-->
                <!--                    android:scrollHorizontally="true"-->
                <!--                    android:singleLine="true"-->
                <!--                    android:textColor="#ff4500"-->
                <!--                    android:textSize="30sp" />-->

                <ImageView
                    android:id="@+id/notification_img"
                    android:layout_width="@dimen/padding35"
                    android:layout_height="@dimen/padding35"
                    android:layout_gravity="right"
                    android:layout_marginEnd="@dimen/padding10"
                    android:padding="@dimen/padding5"
                    android:src="@drawable/notification"
                    app:tint="@color/white" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:id="@+id/activity_main_content_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clipToPadding="false" />

    </LinearLayout>
    <!-- Main Activity End -->


    <!-- Custom Navigation Drawer Start -->
    <LinearLayout
        android:id="@+id/navigation_layout"
        android:layout_width="460dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/profile_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/side_nav_bar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding5"
            android:paddingTop="@dimen/padding30"
            android:paddingRight="@dimen/padding5"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="@dimen/padding90"
                android:layout_height="@dimen/padding90"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/padding5"
                android:background="@drawable/drawer_img"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size30"
                android:theme="@style/StyleTextView" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_img"
                android:layout_width="@dimen/padding70"
                android:layout_height="@dimen/padding70"
                android:layout_gravity="center_vertical"
                android:background="@drawable/app_logo"
                android:padding="10dp"
                android:visibility="gone"
                app:civ_border_color="@color/black"
                app:civ_border_width="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="@dimen/font_size25"
                    android:theme="@style/StyleTextView" />

                <TextView
                    android:id="@+id/user_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/grayColorColor"
                    android:textSize="@dimen/font_size20"
                    android:theme="@style/StyleTextView" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayColorColor" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/navigation_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/padding5"
            android:layout_weight="1"
            android:paddingLeft="@dimen/nav_header_vertical_spacing"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:paddingRight="@dimen/nav_header_vertical_spacing"
            android:paddingBottom="@dimen/nav_header_vertical_spacing"
            android:scrollbarThumbHorizontal="@null"
            android:scrollbarThumbVertical="@null">

        </androidx.recyclerview.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayColorColor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/app_lo"
                android:layout_width="@dimen/padding40"
                android:layout_height="@dimen/padding40"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/padding10"
                android:src="@drawable/app_logo" />

            <TextView
                android:id="@+id/app_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/app_lo"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_margin="12sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size20"
                android:textStyle="bold"
                android:theme="@style/StyleTextView" />

        </RelativeLayout>

    </LinearLayout>
    <!-- Custom Navigation Drawer End -->

</androidx.drawerlayout.widget.DrawerLayout>