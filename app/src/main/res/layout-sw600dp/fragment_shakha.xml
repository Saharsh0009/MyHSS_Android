<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/shakha_layout"
    tools:context="com.uk.myhss.ui.policies.GuruDakshinaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/root_view"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/membership_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding10">

            <ImageView
                android:layout_width="@dimen/padding30"
                android:layout_height="@dimen/padding30"
                android:padding="2dp"
                android:layout_centerVertical="true"
                android:src="@drawable/membership_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/padding45"
                android:layout_marginEnd="@dimen/padding55"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/StyleTextView"
                    android:text="@string/membership_applications"
                    android:textSize="@dimen/font_size18" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/StyleTextView"
                    android:visibility="gone"
                    android:text="@string/view_membership_applications"
                    android:textSize="@dimen/font_size15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" >

                <RelativeLayout
                    android:id="@+id/member_count_layout"
                    android:layout_width="@dimen/padding30"
                    android:layout_height="@dimen/padding30"
                    android:visibility="gone"
                    android:background="@drawable/red_round">

                    <TextView
                        android:id="@+id/member_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textAlignment="center"
                        android:maxLength="3"
                        android:textColor="@color/white"
                        android:theme="@style/StyleTextView" />

                </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/padding25"
                android:layout_height="@dimen/padding25"
                android:padding="@dimen/padding5"
                android:src="@drawable/right_arrow" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGrayColor" />

        <RelativeLayout
            android:id="@+id/active_membership_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding10">

            <ImageView
                android:layout_width="@dimen/padding30"
                android:layout_height="@dimen/padding30"
                android:padding="2dp"
                android:layout_centerVertical="true"
                android:src="@drawable/active_member_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/padding45"
                android:layout_marginEnd="@dimen/padding55"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/StyleTextView"
                    android:text="@string/active_members"
                    android:textSize="@dimen/font_size18" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/StyleTextView"
                    android:visibility="gone"
                    android:text="@string/view_active_members"
                    android:textSize="@dimen/font_size15" />

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/padding25"
                android:layout_height="@dimen/padding25"
                android:padding="@dimen/padding5"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/right_arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGrayColor" />

        <RelativeLayout
            android:id="@+id/inactive_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding10">

            <ImageView
                android:layout_width="@dimen/padding30"
                android:layout_height="@dimen/padding30"
                android:padding="2dp"
                android:layout_centerVertical="true"
                android:src="@drawable/inactive" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/padding45"
                android:layout_marginEnd="@dimen/padding55"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/StyleTextView"
                    android:text="@string/inactive_applications"
                    android:textSize="@dimen/font_size18" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/StyleTextView"
                    android:visibility="gone"
                    android:text="@string/view_rejected_applications"
                    android:textSize="@dimen/font_size15" />

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/padding25"
                android:layout_height="@dimen/padding25"
                android:padding="@dimen/padding5"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/right_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rejected_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding10">

            <ImageView
                android:layout_width="@dimen/padding30"
                android:layout_height="@dimen/padding30"
                android:padding="2dp"
                android:layout_centerVertical="true"
                android:src="@drawable/reject_member_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/padding45"
                android:layout_marginEnd="@dimen/padding55"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/StyleTextView"
                    android:text="@string/rejected_applications"
                    android:textSize="@dimen/font_size18" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/StyleTextView"
                    android:visibility="gone"
                    android:text="@string/view_rejected_applications"
                    android:textSize="@dimen/font_size15" />

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/padding25"
                android:layout_height="@dimen/padding25"
                android:padding="@dimen/padding5"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/right_arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGrayColor" />

        <RelativeLayout
            android:id="@+id/sankhya_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding10">

            <ImageView
                android:layout_width="@dimen/padding30"
                android:layout_height="@dimen/padding30"
                android:padding="2dp"
                android:layout_centerVertical="true"
                android:src="@drawable/sankhya_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/padding45"
                android:layout_marginEnd="@dimen/padding55"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/StyleTextView"
                    android:text="@string/sankhya"
                    android:textSize="@dimen/font_size18" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/StyleTextView"
                    android:visibility="gone"
                    android:text="@string/sankhiya_form"
                    android:textSize="@dimen/font_size15" />

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/padding25"
                android:layout_height="@dimen/padding25"
                android:padding="@dimen/padding5"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/right_arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGrayColor" />

    </LinearLayout>

    <!--<TextView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
