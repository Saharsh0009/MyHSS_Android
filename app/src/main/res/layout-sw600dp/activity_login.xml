<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    tools:context="com.uk.myhss.Login_Registration.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line_view"
        android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:background="@color/primaryColor"
        android:layout_height="@dimen/padding130" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/athlete_img"
        android:layout_width="@dimen/padding110"
        android:layout_height="@dimen/padding110"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/app_logo"
        android:layout_marginTop="-50dp"
        android:padding="10dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/padding200"
        android:layout_marginEnd="@dimen/padding200"
        android:gravity="center_vertical|center"
        android:padding="@dimen/padding35"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/padding30"
                android:layout_height="@dimen/padding30"
                android:layout_gravity="center_vertical"
                android:src="@drawable/email_img" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:theme="@style/StyleEditTextView"
                    android:id="@+id/edit_username"
                    android:hint="@string/username"
                    android:inputType="text"
                    android:textSize="@dimen/font_size18"
                    android:background="@android:color/transparent"
                    android:textColor="@color/blackColor"
                    android:textColorHint="@color/grayColorColor"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/padding30"
                android:layout_height="@dimen/padding30"
                android:layout_gravity="center_vertical"
                android:src="@drawable/lock_dark" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:theme="@style/StyleEditTextView"
                    android:id="@+id/edit_password"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    android:textSize="@dimen/font_size18"
                    android:background="@android:color/transparent"
                    android:textColor="@color/blackColor"
                    android:textColorHint="@color/grayColorColor"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--<ImageView
                android:id="@+id/hide_show"
                android:layout_width="@dimen/padding20"
                android:layout_height="@dimen/padding20"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/padding10"
                android:src="@drawable/show_password" />-->

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding40">

            <TextView
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/button_round"
                android:padding="12dp"
                android:paddingStart="@dimen/padding75"
                android:paddingEnd="@dimen/padding75"
                android:text="@string/sign_in"
                android:fontFamily="@font/sourcesanspro_regular"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size25" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/or_text"
            android:visibility="gone"
            android:textStyle="bold"
            android:textColor="@color/blueColor"
            android:textSize="@dimen/font_size15" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5"
            android:visibility="gone"
            android:orientation="horizontal">

            <!--<ImageView
                android:id="@+id/facebook_login"
                android:layout_width="@dimen/padding40"
                android:layout_height="@dimen/padding40"
                android:layout_weight="1"
                android:layout_margin="@dimen/padding5"
                android:src="@drawable/facebook_img" />-->

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="@dimen/padding5" />

            <View
                android:layout_width="@dimen/padding40"
                android:layout_height="@dimen/padding40" />

            <ImageView
                android:id="@+id/gmail_login"
                android:layout_width="@dimen/padding40"
                android:layout_height="@dimen/padding40"
                android:layout_weight="1"
                android:layout_margin="@dimen/padding5"
                android:src="@drawable/google_img" />

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/registration_layout"
        android:background="@color/lightGrayColor" />

    <RelativeLayout
        android:id="@+id/registration_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/padding5"
        android:gravity="center|bottom"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/forgot_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/padding50"
            android:fontFamily="@font/sourcesanspro_regular"
            android:layout_marginStart="@dimen/padding20"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:text="@string/forgot_password"
            android:textStyle="bold"
            android:textColor="@color/blueColor"
            android:textSize="@dimen/font_size18" />

        <TextView
            android:id="@+id/dont_have_account_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sourcesanspro_regular"
            android:layout_toStartOf="@+id/registration_btn"
            android:text="@string/dont_have_account"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/font_size18"
            android:layout_toLeftOf="@+id/registration_btn" />

        <TextView
            android:id="@+id/registration_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/padding5"
            android:layout_marginEnd="@dimen/padding20"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:text="@string/register"
            android:textStyle="bold"
            android:textColor="@color/blueColor"
            android:textSize="@dimen/font_size18" />

    </RelativeLayout>

    <include layout="@layout/forgotpasswordactivity" />

</RelativeLayout>