<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding50"
                android:background="@color/primaryColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding15"
                android:layout_marginTop="-30dp"
                android:layout_marginEnd="@dimen/padding15"
                android:background="@drawable/edittext_round"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/font_size15"
                    android:layout_marginTop="@dimen/padding20"
                    android:layout_marginEnd="@dimen/font_size15"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding20"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/shakha_name_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sourcesanspro_regular"
                            android:text="@string/frequency"
                            android:textColor="@color/grayColorColor"
                            android:textSize="@dimen/font_size15" />

                        <TextView
                            android:id="@+id/user_name_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding5"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:text="@string/frequency"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/font_size18"
                            android:theme="@style/StyleTextView" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/font_size15"
                    android:layout_marginTop="@dimen/padding20"
                    android:layout_marginEnd="@dimen/font_size15"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding20"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/guru_dakshina"
                            android:textColor="@color/grayColorColor"
                            android:textSize="@dimen/font_size15" />

                        <TextView
                            android:id="@+id/guru_dakshina_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding5"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:text="@string/guru_dakshina"
                            android:textColor="@color/greenColor"
                            android:textSize="@dimen/font_size18"
                            android:theme="@style/StyleTextView" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding20"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/contribution_type"
                            android:textColor="@color/grayColorColor"
                            android:textSize="@dimen/font_size15" />

                        <TextView
                            android:id="@+id/contribution_type_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding5"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:text="@string/contribution_type"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size18"
                            android:theme="@style/StyleTextView" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/font_size15"
                    android:layout_marginTop="@dimen/padding20"
                    android:layout_marginEnd="@dimen/font_size15"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding20"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/reference"
                            android:textColor="@color/grayColorColor"
                            android:textSize="@dimen/font_size15" />

                        <TextView
                            android:id="@+id/reference_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding5"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:text="@string/reference"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/font_size18"
                            android:theme="@style/StyleTextView" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding20"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/status"
                            android:textColor="@color/grayColorColor"
                            android:textSize="@dimen/font_size15" />

                        <TextView
                            android:id="@+id/status_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding5"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:text="@string/status"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size18"
                            android:theme="@style/StyleTextView" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/font_size15"
                    android:layout_marginTop="@dimen/padding20"
                    android:layout_marginEnd="@dimen/font_size15"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding20"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date"
                            android:textColor="@color/grayColorColor"
                            android:textSize="@dimen/font_size15" />

                        <TextView
                            android:id="@+id/date_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding5"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:text="@string/date"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/font_size18"
                            android:theme="@style/StyleTextView" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding20"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gift_aid"
                            android:textColor="@color/grayColorColor"
                            android:textSize="@dimen/font_size15" />

                        <TextView
                            android:id="@+id/gift_aid_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding5"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:text="@string/gift_aid"
                            android:textColor="@color/greenColor"
                            android:textSize="@dimen/font_size18"
                            android:theme="@style/StyleTextView" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/frequency_of_donation_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/font_size15"
                    android:layout_marginTop="@dimen/padding35"
                    android:layout_marginEnd="@dimen/font_size15"
                    android:text="@string/frequency_of_donation"
                    android:textColor="@color/grayColorColor"
                    android:textSize="@dimen/font_size15"
                    />

                <TextView
                    android:id="@+id/frequency_of_donation_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/font_size15"
                    android:layout_marginTop="@dimen/padding5"
                    android:layout_marginEnd="@dimen/font_size15"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:text="@string/frequency_of_donation"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size18"

                    android:theme="@style/StyleTextView"
                    android:textStyle="bold"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/padding15"
                    android:layout_marginTop="@dimen/padding35"
                    android:layout_marginEnd="@dimen/padding15"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/close_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/gray_round_border"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/padding35"
                        android:paddingEnd="@dimen/padding35">

                        <ImageView
                            android:layout_width="@dimen/padding20"
                            android:layout_height="@dimen/padding20"
                            android:src="@drawable/close_round_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sourcesanspro_regular"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="@string/go_back"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                        <!--frequency_of_donation_txt-->
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding20" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>