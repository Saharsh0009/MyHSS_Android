<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:background="@color/app_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/action_bar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/home_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding60"
                android:background="@color/primaryColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginStart="@dimen/padding20"
                android:layout_marginEnd="@dimen/padding20" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/edittext_round"
                    android:padding="@dimen/padding10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding5"
                        android:layout_marginStart="@dimen/padding10"
                        android:layout_marginEnd="@dimen/padding10"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/shakha_name_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/menu_shakha"
                            android:textSize="@dimen/font_size25"
                            android:theme="@style/StyleTextView"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/shakha_address_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/menu_shakha"
                            android:layout_marginTop="2dp"
                            android:textSize="@dimen/font_size20"
                            android:textColor="@color/orangeColor"
                            android:theme="@style/StyleTextView" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grayColorColor"
                        android:layout_marginTop="@dimen/padding10"
                        android:layout_marginStart="@dimen/padding10"
                        android:layout_marginEnd="@dimen/padding10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding10"
                        android:layout_marginStart="@dimen/padding10"
                        android:layout_marginEnd="@dimen/padding10"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/parent_shakha_name_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Shakha Address"
                            android:textSize="@dimen/font_size25"
                            android:theme="@style/StyleTextView"
                            android:textColor="@color/grayColorColor" />

                        <TextView
                            android:id="@+id/parent_shakha_address_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/my_shakha"
                            android:layout_marginTop="2dp"
                            android:textSize="@dimen/font_size20"
                            android:textColor="@color/black"
                            android:theme="@style/StyleTextView" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grayColorColor"
                        android:layout_marginTop="@dimen/padding10"
                        android:layout_marginStart="@dimen/padding10"
                        android:layout_marginEnd="@dimen/padding10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/padding10"
                        android:layout_marginStart="@dimen/padding10"
                        android:layout_marginEnd="@dimen/padding10"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/organisation_name_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/organistion_name"
                            android:textSize="@dimen/font_size25"
                            android:theme="@style/StyleTextView"
                            android:textColor="@color/grayColorColor" />

                        <TextView
                            android:id="@+id/organisation_address_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/organistion_name"
                            android:layout_marginTop="2dp"
                            android:textSize="@dimen/font_size20"
                            android:textColor="@color/black"
                            android:theme="@style/StyleTextView" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textAllCaps="true"
                    android:background="@color/app_background"
                    android:layout_marginTop="@dimen/padding10"
                    android:layout_marginStart="@dimen/padding20"
                    android:layout_marginEnd="@dimen/padding20"
                    android:textSize="@dimen/font_size25"
                    android:textColor="@color/grayColorColor"
                    android:theme="@style/StyleTextView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/padding10"
                    android:background="@drawable/edittext_round"
                    android:padding="@dimen/padding10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding5"
                        android:layout_marginStart="@dimen/padding10"
                        android:layout_marginEnd="@dimen/padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/email_name_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/email_txt"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_size25"
                            android:theme="@style/StyleTextView"
                            android:textColor="@color/grayColorColor" />

                        <TextView
                            android:id="@+id/email_address_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/email_txt"
                            android:layout_weight="1"
                            android:layout_marginTop="2dp"
                            android:textSize="@dimen/font_size20"
                            android:textColor="@color/black"
                            android:theme="@style/StyleTextView" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grayColorColor"
                        android:layout_marginTop="@dimen/padding10"
                        android:layout_marginStart="@dimen/padding10"
                        android:layout_marginEnd="@dimen/padding10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding10"
                        android:layout_marginStart="@dimen/padding10"
                        android:layout_marginEnd="@dimen/padding10"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/phone_name_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phone"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_size25"
                            android:theme="@style/StyleTextView"
                            android:textColor="@color/grayColorColor" />

                        <TextView
                            android:id="@+id/phone_address_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phone"
                            android:layout_weight="1"
                            android:layout_marginTop="2dp"
                            android:textSize="@dimen/font_size20"
                            android:textColor="@color/black"
                            android:theme="@style/StyleTextView" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Info"
                    android:textAllCaps="true"
                    android:visibility="gone"
                    android:background="@color/app_background"
                    android:layout_marginTop="@dimen/padding10"
                    android:layout_marginStart="@dimen/padding20"
                    android:layout_marginEnd="@dimen/padding20"
                    android:textSize="@dimen/font_size25"
                    android:textColor="@color/grayColorColor"
                    android:theme="@style/StyleTextView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/padding10"
                    android:background="@drawable/edittext_round"
                    android:padding="@dimen/padding10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding5"
                        android:visibility="gone"
                        android:layout_marginStart="@dimen/padding10"
                        android:layout_marginEnd="@dimen/padding10"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/day_name_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Day"
                            android:textSize="@dimen/font_size25"
                            android:theme="@style/StyleTextView"
                            android:textColor="@color/grayColorColor" />

                        <TextView
                            android:id="@+id/day_address_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Day"
                            android:layout_marginTop="2dp"
                            android:textSize="@dimen/font_size20"
                            android:textColor="@color/black"
                            android:theme="@style/StyleTextView" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:background="@color/grayColorColor"
                        android:layout_marginTop="@dimen/padding10"
                        android:layout_marginStart="@dimen/padding10"
                        android:layout_marginEnd="@dimen/padding10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding10"
                        android:layout_marginStart="@dimen/padding10"
                        android:layout_marginEnd="@dimen/padding10"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/time_name_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/my_shakha"
                            android:textSize="@dimen/font_size25"
                            android:theme="@style/StyleTextView"
                            android:textColor="@color/grayColorColor" />

                        <TextView
                            android:id="@+id/time_address_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/my_shakha"
                            android:layout_marginTop="2dp"
                            android:textSize="@dimen/font_size20"
                            android:textColor="@color/black"
                            android:theme="@style/StyleTextView" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shakha_adapter_map"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/padding10"
                    android:padding="@dimen/padding10"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/button_round"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/padding30"
                        android:layout_height="@dimen/padding30"
                        android:src="@drawable/get_dir" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:paddingStart="@dimen/padding10"
                        android:textAlignment="center"
                        android:text="Get Directions"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size15"
                        android:theme="@style/StyleTextView" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding20" />

            </LinearLayout>
        </RelativeLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>