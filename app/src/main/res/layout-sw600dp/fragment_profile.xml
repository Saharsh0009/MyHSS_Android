<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background"
    tools:context="com.uk.myhss.ui.policies.ProfileFragment">

    <include layout="@layout/action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical"
        tools:ignore="MissingConstraints">

        <!--<ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >-->

                <RelativeLayout
                    android:id="@+id/home_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding70"
                        android:background="@color/primaryColor" />

                    <LinearLayout
                        android:id="@+id/name_age_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/padding20"
                        android:layout_marginStart="@dimen/padding20"
                        android:layout_marginEnd="@dimen/padding20"
                        android:background="@drawable/edittext_round">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding10">

                            <TextView
                                android:id="@+id/username_txt"
                                android:layout_width="@dimen/padding90"
                                android:layout_height="@dimen/padding90"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/padding5"
                                android:textSize="@dimen/font_size25"
                                android:gravity="center"
                                android:text="AD"
                                android:padding="8dp"
                                android:textAlignment="center"
                                android:theme="@style/StyleTextView"
                                android:background="@drawable/white_orange_circle"
                                android:textColor="@color/white" />

                            <!--<ImageView
                                android:id="@+id/user_image"
                                android:layout_width="@dimen/padding50"
                                android:layout_height="@dimen/padding50"
                                android:layout_marginTop="@dimen/padding20"
                                android:layout_marginStart="@dimen/padding5"
                                android:src="@drawable/my_shakha_icon"
                                tools:ignore="ContentDescription" />-->

                            <LinearLayout
                                android:id="@+id/personal_info_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/username_txt"
                                android:layout_marginEnd="@dimen/padding10"
                                android:orientation="horizontal" >

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/padding10"
                                    android:layout_marginEnd="@dimen/padding20"
                                    android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/user_name_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/my_shakha"
                                    android:textSize="@dimen/font_size25"
                                    android:theme="@style/StyleTextView"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/user_role_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/my_shakha"
                                    android:layout_marginTop="@dimen/padding10"
                                    android:textSize="@dimen/font_size20"
                                    android:textColor="@color/grayColorColor"
                                    android:theme="@style/StyleTextView" />


                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/grayColorColor" />

                                <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/padding5"
                                    android:layout_marginStart="@dimen/padding20"
                                    android:layout_marginEnd="@dimen/padding10"
                                android:orientation="vertical" >

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:layout_width="@dimen/padding25"
                                            android:layout_height="@dimen/padding25"
                                            android:src="@drawable/age_calendar"
                                            tools:ignore="ContentDescription" />

                                        <TextView
                                            android:id="@+id/user_age_txt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="21 Years"
                                            android:layout_marginStart="@dimen/padding45"
                                            android:textSize="@dimen/font_size20"
                                            android:theme="@style/StyleTextView" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/padding10"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:id="@+id/user_gender_img"
                                            android:layout_width="@dimen/padding25"
                                            android:layout_height="@dimen/padding25"
                                            android:src="@drawable/user_gender"
                                            tools:ignore="ContentDescription" />

                                        <TextView
                                            android:id="@+id/user_gender_txt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Male"
                                            android:layout_marginStart="@dimen/padding45"
                                            android:textSize="@dimen/font_size20"
                                            android:theme="@style/StyleTextView" />

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/edit_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/padding50"
                        android:layout_marginBottom="2dp"
                        android:layout_alignRight="@+id/name_age_layout"
                        android:layout_marginTop="@dimen/padding100"
                        android:background="@drawable/button_orange_round"
                        android:paddingStart="@dimen/padding50"
                        android:paddingEnd="@dimen/padding50"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sourcesanspro_regular"
                            android:gravity="center"
                            android:padding="@dimen/padding5"
                            android:text="@string/edit_txt"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size25"
                            android:textStyle="bold"
                            android:theme="@style/StyleTextView"
                            android:visibility="visible" />

                    </LinearLayout>

                </RelativeLayout>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:theme="@style/MineCustomTabText"
                    android:layout_marginTop="@dimen/padding20"
                    app:tabIndicatorFullWidth="true"
                    app:tabGravity="fill"
                    app:tabTextAppearance="@dimen/font_size20"
                    app:tabMode="fixed"
                    android:layout_marginStart="@dimen/padding50"
                    android:layout_marginEnd="@dimen/padding50"
                    app:tabTextColor="@color/grayColorColor"
                    app:tabIndicatorColor="@color/primaryColor"
                    app:tabSelectedTextColor="@color/primaryColor"
                    android:scrollbars="horizontal"
                    app:tabIndicatorHeight="2dp">

                </com.google.android.material.tabs.TabLayout>

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding50"
                    android:layout_marginEnd="@dimen/padding50"
                    android:background="@drawable/edittext_round"
                    app:layout_constraintTop_toBottomOf="@+id/tabLayout">

                </androidx.viewpager.widget.ViewPager>

            <!--</LinearLayout>

        </ScrollView>-->

        <!--<LinearLayout
            android:id="@+id/mainedit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding15"
            android:layout_marginStart="@dimen/padding15"
            android:layout_marginEnd="@dimen/padding20"
            android:background="@drawable/button_orange_round"
            android:paddingStart="@dimen/padding50"
            android:paddingEnd="@dimen/padding50" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="12dp"
                android:textAlignment="center"
                android:text="@string/edit_txt"
                android:theme="@style/StyleTextView"
                android:textStyle="bold"
                android:visibility="visible"
                android:fontFamily="@font/sourcesanspro_regular"
                android:textColor="@color/primaryColor"
                android:textSize="18sp" />

        </LinearLayout>-->

    </LinearLayout>
</LinearLayout>