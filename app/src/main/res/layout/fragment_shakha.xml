<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shakha_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uk.myhss.ui.policies.GuruDakshinaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/root_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:id="@+id/membership_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding10">

                <ImageView
                    android:layout_width="@dimen/padding30"
                    android:layout_height="@dimen/padding30"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:src="@drawable/membership_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/padding45"
                    android:layout_marginEnd="@dimen/padding55"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/membership_applications_new"
                        android:textSize="@dimen/font_size18"
                        android:theme="@style/StyleTextView" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/view_membership_applications"
                        android:textSize="@dimen/font_size15"
                        android:theme="@style/StyleTextView"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/member_count_layout"
                        android:layout_width="@dimen/padding30"
                        android:layout_height="@dimen/padding30"
                        android:background="@drawable/red_round"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/member_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:maxLength="3"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:theme="@style/StyleTextView" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="@dimen/padding25"
                        android:layout_height="@dimen/padding25"
                        android:padding="@dimen/padding5"
                        android:src="@drawable/right_arrow" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGrayColor" />

            <RelativeLayout
                android:id="@+id/active_membership_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding10">

                <ImageView
                    android:layout_width="@dimen/padding30"
                    android:layout_height="@dimen/padding30"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:src="@drawable/active_member_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/padding45"
                    android:layout_marginEnd="@dimen/padding55"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/active_members"
                        android:textSize="@dimen/font_size18"
                        android:theme="@style/StyleTextView" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/view_active_members"
                        android:textSize="@dimen/font_size15"
                        android:theme="@style/StyleTextView"
                        android:visibility="gone" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/padding25"
                    android:layout_height="@dimen/padding25"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/padding5"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGrayColor" />

            <RelativeLayout
                android:id="@+id/inactive_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding10">

                <ImageView
                    android:layout_width="@dimen/padding30"
                    android:layout_height="@dimen/padding30"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:src="@drawable/inactive" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/padding45"
                    android:layout_marginEnd="@dimen/padding55"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/inactive_members"
                        android:textSize="@dimen/font_size18"
                        android:theme="@style/StyleTextView" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/view_rejected_applications"
                        android:textSize="@dimen/font_size15"
                        android:theme="@style/StyleTextView"
                        android:visibility="gone" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/padding25"
                    android:layout_height="@dimen/padding25"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/padding5"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGrayColor" />

            <RelativeLayout
                android:id="@+id/rejected_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding10">

                <ImageView
                    android:layout_width="@dimen/padding30"
                    android:layout_height="@dimen/padding30"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:src="@drawable/reject_member_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/padding45"
                    android:layout_marginEnd="@dimen/padding55"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rejected_applications"
                        android:textSize="@dimen/font_size18"
                        android:theme="@style/StyleTextView" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/view_rejected_applications"
                        android:textSize="@dimen/font_size15"
                        android:theme="@style/StyleTextView"
                        android:visibility="gone" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/padding25"
                    android:layout_height="@dimen/padding25"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/padding5"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGrayColor" />

            <RelativeLayout
                android:id="@+id/sankhya_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding10">

                <ImageView
                    android:layout_width="@dimen/padding30"
                    android:layout_height="@dimen/padding30"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:src="@drawable/sankhya_img" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/padding45"
                    android:layout_marginEnd="@dimen/padding55"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sankhya"
                        android:textSize="@dimen/font_size18"
                        android:theme="@style/StyleTextView" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sankhiya_form"
                        android:textSize="@dimen/font_size15"
                        android:theme="@style/StyleTextView"
                        android:visibility="gone" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/padding25"
                    android:layout_height="@dimen/padding25"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/padding5"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGrayColor" />

        </LinearLayout>
    </ScrollView>
