<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/mainedit_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/root_view"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/my_shakha_icon_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding10">

            <ImageView
                android:layout_width="@dimen/padding30"
                android:layout_height="@dimen/padding30"
                android:layout_centerVertical="true"
                android:src="@drawable/shakaha_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/padding50"
                android:layout_marginEnd="@dimen/padding10"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/StyleTextView"
                    android:text="@string/shakha_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size18" />

                <TextView
                    android:id="@+id/shakha__address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/StyleTextView"
                    android:text="@string/shakha_name"
                    android:textColor="@color/grayColorColor"
                    android:textSize="@dimen/font_size15" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGrayColor" />

        <RelativeLayout
            android:id="@+id/address_icon_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding10">

            <ImageView
                android:layout_width="@dimen/padding30"
                android:layout_height="@dimen/padding30"
                android:layout_centerVertical="true"
                android:src="@drawable/address_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/padding50"
                android:layout_marginEnd="@dimen/padding10"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/StyleTextView"
                    android:text="@string/address"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size18" />

                <TextView
                    android:id="@+id/address_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/StyleTextView"
                    android:text="@string/address"
                    android:textColor="@color/grayColorColor"
                    android:textSize="@dimen/font_size15" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGrayColor" />

        <RelativeLayout
            android:id="@+id/occupation_icon_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding10">

            <ImageView
                android:layout_width="@dimen/padding30"
                android:layout_height="@dimen/padding30"
                android:layout_centerVertical="true"
                android:src="@drawable/occupation_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/padding50"
                android:layout_marginEnd="@dimen/padding10"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/StyleTextView"
                    android:text="@string/occupation"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size18" />

                <TextView
                    android:id="@+id/occupation_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/StyleTextView"
                    android:text="@string/occupation"
                    android:textColor="@color/grayColorColor"
                    android:textSize="@dimen/font_size15" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGrayColor" />

        <RelativeLayout
            android:id="@+id/spoken_lang_icon_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding10">

            <ImageView
                android:layout_width="@dimen/padding30"
                android:layout_height="@dimen/padding30"
                android:layout_centerVertical="true"
                android:src="@drawable/spoken_lang_icon"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/padding50"
                android:layout_marginEnd="@dimen/padding10"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/StyleTextView"
                    android:textColor="@color/black"
                    android:text="@string/spoken_language"
                    android:textSize="@dimen/font_size18" />

                <TextView
                    android:id="@+id/spoken_lang_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/StyleTextView"
                    android:textColor="@color/grayColorColor"
                    android:text="@string/spoken_language"
                    android:textSize="@dimen/font_size15" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGrayColor" />

    </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/mainedit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/padding5"
        android:background="@color/orangeColor" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding10"
            android:textAlignment="center"
            android:text="@string/edit_txt"
            android:theme="@style/StyleTextView"
            android:textStyle="bold"
            android:visibility="visible"
            android:fontFamily="@font/sourcesanspro_regular"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>