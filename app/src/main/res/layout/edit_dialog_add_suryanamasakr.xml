    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_more_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/padding15"
        android:layout_marginStart="@dimen/font_size15"
        android:layout_marginEnd="@dimen/font_size15"
        android:background="@drawable/button_round"
        android:text="Add More"
        android:textSize="@dimen/font_size15"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding15"
        android:layout_marginStart="@dimen/font_size15"
        android:layout_marginEnd="@dimen/font_size15"
        android:layout_marginBottom="@dimen/padding15"
        android:orientation="horizontal" >

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="@dimen/padding5"
        android:background="@drawable/button_round"
        android:text="@string/submit"
        android:textSize="@dimen/font_size15"
        android:textColor="@android:color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/padding5"
            android:background="@drawable/button_round"
