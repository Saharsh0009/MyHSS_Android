<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/rootview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical"
            tools:ignore="MissingConstraints">

            <include layout="@layout/action_bar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    layout="@layout/no_data_found_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:id="@+id/linechart_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/font_size15"
                        android:layout_marginTop="@dimen/padding10"
                        android:layout_marginEnd="@dimen/font_size15"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:text="@string/suryanamaskar_graph"
                        android:textAlignment="center"
                        android:textColor="@color/blackColor"
                        android:textSize="@dimen/font_size20" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/font_size15"
                        android:layout_marginEnd="@dimen/font_size15"
                        android:layout_marginBottom="@dimen/padding10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/font_size15"
                            android:layout_marginTop="@dimen/padding10"
                            android:layout_marginEnd="@dimen/font_size15"
                            android:layout_weight="1"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:gravity="center_horizontal"
                            android:text="Total"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/font_size20" />

                        <TextView
                            android:id="@+id/average_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/font_size15"
                            android:layout_marginTop="@dimen/padding10"
                            android:layout_marginEnd="@dimen/font_size15"
                            android:layout_weight="1"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:gravity="left|center_vertical"
                            android:text="0.0"
                            android:textColor="@color/orangeColor"
                            android:textSize="@dimen/font_size20" />

                    </LinearLayout>
                    
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart_surya"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/padding20" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>