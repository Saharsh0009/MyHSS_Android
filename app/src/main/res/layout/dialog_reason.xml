<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/forgot_password_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="@dimen/padding10">


    <LinearLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding20"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/padding30"
            android:layout_height="@dimen/padding30"
            android:layout_gravity="center_vertical"
            android:src="@drawable/reject_member_icon" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:errorIconDrawable="@null">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_reason"
                style="@style/StyleEditTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:focusable="true"
                android:fontFamily="@font/sourcesanspro_regular"
                android:hint="@string/write_here_your_reason"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:textColor="@color/blackColor"
                android:textColorHint="@color/grayColorColor"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_size15" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</RelativeLayout>