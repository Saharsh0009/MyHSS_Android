<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding5"
    android:orientation="vertical"
    android:id="@+id/adapter_view"
    android:background="@drawable/edittext_round">

    <TextView
        android:id="@+id/family_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:padding="2dp"
        android:singleLine="true"
        android:layout_marginTop="@dimen/padding5"
        android:layout_marginStart="@dimen/padding10"
        android:layout_marginEnd="@dimen/padding10"
        android:theme="@style/StyleTextView"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"  >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding10"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/present_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/present_txt"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/padding5"
                android:layout_marginBottom="@dimen/padding15"
                android:theme="@style/StyleTextView"
                android:textColor="@color/grayColorColor"
                android:background="@drawable/grayround_border"
                android:textSize="@dimen/font_size13"  />

            <TextView
                android:id="@+id/absent_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/absent_txt"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/present_txt"
                android:layout_marginStart="@dimen/padding5"
                android:layout_marginEnd="@dimen/padding10"
                android:layout_marginBottom="@dimen/padding15"
                android:theme="@style/StyleTextView"
                android:textColor="@color/grayColorColor"
                android:background="@drawable/grayround_border"
                android:textSize="@dimen/font_size13"  />

            <RelativeLayout
                android:id="@+id/active_inactive_view"
                android:layout_width="@dimen/padding45"
                android:layout_height="@dimen/padding25"
                android:layout_marginTop="@dimen/padding20"
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:background="@drawable/baal_background" >

                <TextView
                    android:id="@+id/active_inactive_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/StyleTextView"
                    android:text="@string/app_name"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/font_size9"
                    android:textColor="@color/black" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>