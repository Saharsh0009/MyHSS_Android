<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:id="@+id/top_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/passcode_border_logo_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/header"
                layout="@layout/action_bar" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding50"
                android:background="@color/primaryColor" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/athlete_img"
                android:layout_width="@dimen/padding60"
                android:layout_height="@dimen/padding60"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-35dp"
                android:background="@drawable/app_logo"
                android:padding="10dp"
                app:civ_border_color="@color/black"
                app:civ_border_width="1dp" />

        </LinearLayout>

        <!--<ImageView
            android:layout_width="1@dimen/padding50"
            android:layout_height="@dimen/padding80"
            android:layout_marginTop="@dimen/padding20"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/app_logo" />-->

        <TextView
            android:id="@+id/txtEnterPasscode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/padding10"
            android:layout_marginTop="@dimen/padding10"
            android:layout_marginEnd="@dimen/padding10"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size20" />

        <LinearLayout
            android:id="@+id/passcode_img_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding15"
            android:gravity="center">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="@dimen/padding15"
                android:layout_height="@dimen/padding15"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/empty_dot" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="@dimen/padding15"
                android:layout_height="@dimen/padding15"
                android:layout_marginLeft="@dimen/padding20"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/empty_dot" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="@dimen/padding15"
                android:layout_height="@dimen/padding15"
                android:layout_marginLeft="@dimen/padding20"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/empty_dot" />

            <ImageView
                android:id="@+id/img4"
                android:layout_width="@dimen/padding15"
                android:layout_height="@dimen/padding15"
                android:layout_marginLeft="@dimen/padding20"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/empty_dot" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtWrongPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding10"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:gravity="center"
            android:text="Wrong Password"
            android:textColor="#ff0000"
            android:textSize="15sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txtusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="invisible" />

    </LinearLayout>

    <!--android:layout_weight="1"-->
    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_header_layout"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/padding50"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding50"
            android:layout_marginBottom="@dimen/padding20">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/btnOne"
                    android:layout_width="@dimen/padding50"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/button_passcode"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size18" />

                <!--<Button
                    android:id="@+id/btnOne"
                    android:layout_width="@dimen/padding50"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_passcode"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:text="1"
                    android:textColor="@color/black"
