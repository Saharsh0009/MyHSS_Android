            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/btnTwo"
                    android:layout_width="@dimen/padding50"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/button_passcode"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/btnThree"
                    android:layout_width="@dimen/padding50"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/button_passcode"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size18" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding50"
            android:layout_marginBottom="@dimen/padding20">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/btnFour"
                    android:layout_width="@dimen/padding50"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/button_passcode"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/btnFive"
                    android:layout_width="@dimen/padding50"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/button_passcode"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/btnSix"
                    android:layout_width="@dimen/padding50"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/button_passcode"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size18" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding50"
            android:layout_marginBottom="@dimen/padding20">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/btnSeven"
                    android:layout_width="@dimen/padding50"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/button_passcode"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/btnEight"
                    android:layout_width="@dimen/padding50"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/button_passcode"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/btnNine"
                    android:layout_width="@dimen/padding50"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/button_passcode"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size18" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding50"
            android:layout_marginBottom="@dimen/padding20">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/passcode_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:gravity="center"
                    android:text="Logout"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size18"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/btnZero"
                    android:layout_width="@dimen/padding50"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/button_passcode"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size18" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/btnDalet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgBackDelete"
                    android:layout_width="@dimen/padding50"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_backspace_black_15dp"
                    app:tint="@color/primaryColor" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/passcode_layout"
        android:background="@color/lightGrayColor" />

    <RelativeLayout
        android:id="@+id/passcode_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/padding5"
        android:gravity="center|bottom"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/close_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding5"
            android:background="@drawable/gray_round_border"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/padding35"
            android:paddingEnd="@dimen/padding35">

            <ImageView
                android:layout_width="@dimen/padding20"
                android:layout_height="@dimen/padding20"
                android:src="@drawable/close_round_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_regular"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/go_back"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <!--frequency_of_donation_txt-->
        </LinearLayout>

        <!--<TextView
            android:id="@+id/dont_have_account_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sourcesanspro_regular"
            android:layout_marginTop="@dimen/padding20"
            android:layout_toStartOf="@+id/registration_btn"
