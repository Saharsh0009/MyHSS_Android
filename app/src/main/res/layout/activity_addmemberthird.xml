<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/font_size30"
                android:layout_margin="@dimen/font_size15"
                android:src="@drawable/addmember_step3" />

            <TextView
                android:id="@+id/guardian_full_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/font_size15"
                android:text="@string/guardian_information"
                android:textColor="@color/blackColor"
                android:textSize="@dimen/font_size25"
                android:theme="@style/StyleTextView" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding15"
                android:layout_marginTop="@dimen/padding10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/guardian_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/guardian_name"
                    android:textColor="@color/grayColorColor"
                    android:textSize="@dimen/font_size15"
                    android:theme="@style/StyleTextView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/padding10"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textAlignment="center"
                    android:textColor="@color/redColor"
                    android:theme="@style/StyleTextView"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginEnd="@dimen/font_size15"
                android:background="@drawable/edittext_round"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/EditText.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        app:boxStrokeColor="@color/primaryColor">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_guardian_full_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:textColor="@color/blackColor"
                            android:textColorHint="@color/grayColorColor"
                            android:theme="@style/StyleEditTextView" />

                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding15"
                android:layout_marginTop="@dimen/padding10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/guardian_contact_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/guardian_contact_number"
                    android:textColor="@color/grayColorColor"
                    android:textSize="@dimen/font_size15"
                    android:theme="@style/StyleTextView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/padding10"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textAlignment="center"
                    android:textColor="@color/redColor"
                    android:theme="@style/StyleTextView"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginEnd="@dimen/font_size15"
                android:background="@drawable/edittext_round"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/EditText.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        app:boxStrokeColor="@color/primaryColor">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_guardian_contact_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:inputType="number"
                            android:maxLength="13"
                            android:textColor="@color/blackColor"
                            android:textColorHint="@color/grayColorColor"
                            android:theme="@style/StyleEditTextView" />

                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding15"
                android:layout_marginTop="@dimen/padding10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/guardian_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/guardian_email"
                    android:textColor="@color/grayColorColor"
                    android:textSize="@dimen/font_size15"
                    android:theme="@style/StyleTextView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/padding10"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textAlignment="center"
                    android:textColor="@color/redColor"
                    android:theme="@style/StyleTextView"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginEnd="@dimen/font_size15"
                android:background="@drawable/edittext_round"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/EditText.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        app:boxStrokeColor="@color/primaryColor">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_guardian_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/blackColor"
                            android:textColorHint="@color/grayColorColor"
                            android:theme="@style/StyleEditTextView" />

                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding15"
                android:layout_marginTop="@dimen/padding10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/guardian_relationship"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/guardian_relationship"
                    android:textColor="@color/grayColorColor"
                    android:textSize="@dimen/font_size15"
                    android:theme="@style/StyleTextView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/padding10"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textAlignment="center"
                    android:textColor="@color/redColor"
                    android:theme="@style/StyleTextView"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginEnd="@dimen/font_size15"
                android:background="@drawable/edittext_round"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/guardian_relationship_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/EditText.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/font_size15"
                        app:boxStrokeColor="@color/primaryColor"
                        tools:ignore="RtlSymmetry">

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/edit_guardian_relationship"
                            style="@android:style/Widget.Spinner.DropDown"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:tag="@string/occupation_select_other"
                            android:textColor="@color/blackColor"
                            android:textColorHint="@color/grayColorColor"
                            android:theme="@style/StyleEditTextView" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="@dimen/padding10"
                        android:layout_height="@dimen/padding10"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/padding20"
                        android:src="@drawable/arrow_drop_down" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/emergency_realationship_other_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding15"
                    android:layout_marginTop="@dimen/padding10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/other_relationship_name"
                        android:textColor="@color/grayColorColor"
                        android:textSize="@dimen/font_size15"
                        android:theme="@style/StyleTextView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/padding10"
                        android:gravity="center_vertical"
                        android:text="*"
                        android:textAlignment="center"
                        android:textColor="@color/redColor"
                        android:theme="@style/StyleTextView"
                        tools:ignore="RtlCompat" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/font_size15"
                    android:layout_marginTop="@dimen/padding10"
                    android:layout_marginEnd="@dimen/font_size15"
                    android:background="@drawable/edittext_round"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/EditText.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            app:boxStrokeColor="@color/primaryColor"
                            tools:ignore="RtlSymmetry">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_emergency_realationship_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:inputType="text"
                                android:textColor="@color/blackColor"
                                android:textColorHint="@color/grayColorColor"
                                android:theme="@style/StyleEditTextView" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/padding20"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/padding30">

                    <LinearLayout
                        android:id="@+id/back_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/button_orange_round"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/padding35"
                        android:paddingEnd="@dimen/padding35">

                        <ImageView
                            android:layout_width="@dimen/padding15"
                            android:layout_height="@dimen/padding20"
                            android:src="@drawable/prevarrowblue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sourcesanspro_regular"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="@string/prev"
                            android:textColor="@color/primaryColor"
                            android:textSize="18sp"
                            android:theme="@style/StyleTextView" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/padding30"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/padding20">

                    <LinearLayout
                        android:id="@+id/next_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/button_round"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/padding35"
                        android:paddingEnd="@dimen/padding35">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sourcesanspro_regular"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="@string/next"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:theme="@style/StyleTextView" />

                        <ImageView
                            android:layout_width="@dimen/padding15"
                            android:layout_height="@dimen/padding20"
                            android:src="@drawable/nextarrowwhite" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding20" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>