<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/padding10"
    android:background="@drawable/edittext_round"
    android:gravity="center"
    android:orientation="vertical" >

<RelativeLayout
    android:id="@+id/home_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding80"
        android:background="@color/primaryColor" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/total_count"
                android:layout_width="@dimen/padding35"
                android:layout_height="@dimen/padding30"
                android:padding="@dimen/padding5"
                android:textAlignment="center"
                android:textSize="@dimen/font_size15"
                android:visibility="visible"
                android:layout_alignParentStart="true"
                android:background="@drawable/my_shakha_total"
                android:theme="@style/StyleTextView"
                android:textColor="@color/black"  />

            <ImageView
                android:id="@+id/close_button"
                android:layout_width="@dimen/padding30"
                android:layout_height="@dimen/padding30"
                android:padding="8dp"
                android:layout_marginTop="@dimen/padding5"
                android:layout_marginEnd="@dimen/padding10"
                android:src="@drawable/close_img"
                android:layout_alignParentEnd="true"
                android:theme="@style/StyleTextView" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding5"
                android:layout_below="@+id/total_count"
                android:padding="@dimen/padding10">

                <ImageView
                    android:layout_width="@dimen/padding35"
                    android:layout_height="@dimen/padding35"
                    android:src="@drawable/my_shakha_icon"
                    android:padding="@dimen/padding5"
                    android:layout_marginStart="@dimen/padding10"
                    android:layout_centerVertical="true"
                    android:background="@drawable/orange_white_circle"  />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding60"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/my_shakha"
                        android:textSize="@dimen/font_size13"
                        android:theme="@style/StyleTextView"
                        android:textColor="@color/grayColorColor" />

                    <TextView
                        android:id="@+id/my_shakha_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/my_shakha"
                        android:textSize="@dimen/font_size15"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="@font/sourcesanspro_bold" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGrayColor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding10">

            <ImageView
                android:layout_width="@dimen/padding35"
                android:layout_height="@dimen/padding35"
                android:layout_marginStart="@dimen/padding10"
                android:layout_centerVertical="true"
                android:src="@drawable/my_nagar_icon"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding60"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/my_nagar"
                    android:textSize="@dimen/font_size13"
                    android:theme="@style/StyleTextView"
                    android:textColor="@color/grayColorColor" />

                <TextView
                    android:id="@+id/my_nagar_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/my_nagar"
                    android:textSize="@dimen/font_size15"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/sourcesanspro_bold"  />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGrayColor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding5"
            android:padding="@dimen/padding10">

            <ImageView
                android:layout_width="@dimen/padding35"
                android:layout_height="@dimen/padding35"
                android:layout_marginStart="@dimen/padding10"
                android:layout_centerVertical="true"
                android:src="@drawable/my_vilage_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding60"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/my_vibhag"
                    android:textSize="@dimen/font_size13"
                    android:theme="@style/StyleTextView"
                    android:textColor="@color/grayColorColor" />

                <TextView
                    android:id="@+id/my_vibhag_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/my_vibhag"
                    android:textSize="@dimen/font_size15"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/sourcesanspro_bold"  />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>