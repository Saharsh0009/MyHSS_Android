<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/font_size15"
    android:layout_marginTop="@dimen/padding10"
    android:id="@+id/linearDynamicSNEntry"
    android:layout_marginEnd="@dimen/font_size15"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding5"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/select_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray_background"
            android:hint="@string/date"
            android:padding="@dimen/padding15"
            android:textColor="@color/blackColor"
            android:textColorHint="@color/grayColorColor"
            android:theme="@style/StyleEditTextView" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightOrangeColor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding5"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray_background"
            android:digits="0123456789"
            android:hint="@string/count"
            android:inputType="number"
            android:padding="@dimen/padding15"
            android:maxLength="3"
            android:textColor="@color/blackColor"
            android:textColorHint="@color/grayColorColor"
            android:theme="@style/StyleEditTextView" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightOrangeColor" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDeleteSNCount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding5"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/img_delete_view"
            android:layout_width="@dimen/padding40"
            android:layout_height="@dimen/padding40"
            android:layout_gravity="center_horizontal|center_vertical"
            android:padding="@dimen/padding10"
            android:src="@drawable/close_round_icon" />
    </LinearLayout>

</LinearLayout>
