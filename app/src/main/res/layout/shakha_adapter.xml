<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/padding5"
    android:layout_marginTop="@dimen/padding5"
    android:layout_marginEnd="@dimen/padding5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/shakha_adapter_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_round"
                android:orientation="vertical"
                android:padding="@dimen/padding5">

                <TextView
                    android:id="@+id/shakha_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding5"
                    android:paddingStart="12dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="@dimen/padding15"
                    android:paddingBottom="2dp"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:fontFamily="@font/sourcesanspro_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size18"
                    android:textStyle="bold"
                    android:theme="@style/StyleTextView" />

                <TextView
                    android:id="@+id/shakha_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingStart="12dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="@dimen/padding15"
                    android:paddingBottom="2dp"
                    android:text="@string/app_name"
                    android:textColor="@color/offBlackColor"
                    android:textSize="@dimen/font_size15"
                    android:theme="@style/StyleTextView" />

                <TextView
                    android:id="@+id/shakha_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingStart="12dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="@dimen/padding15"
                    android:paddingBottom="2dp"
                    android:text="@string/app_name"
                    android:textColor="@color/offBlackColor"
                    android:textSize="@dimen/font_size15"
                    android:theme="@style/StyleTextView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:paddingStart="12dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="@dimen/padding15"
                        android:paddingBottom="2dp"
                        android:text="Contact Person:"
                        android:textColor="@color/offBlackColor"
                        android:textSize="@dimen/font_size15"
                        android:theme="@style/StyleTextView" />

                <TextView
                    android:id="@+id/shakha_contact_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingStart="@dimen/padding5"
                    android:paddingTop="2dp"
                    android:paddingEnd="@dimen/padding15"
                    android:fontFamily="@font/sourcesanspro_bold"
                    android:paddingBottom="2dp"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size15"
                    android:theme="@style/StyleTextView" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:paddingStart="12dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="@dimen/padding15"
                        android:paddingBottom="2dp"
                        android:text="Email:"
                        android:textColor="@color/offBlackColor"
                        android:textSize="@dimen/font_size15"
                        android:theme="@style/StyleTextView" />

                    <TextView
                        android:id="@+id/shakha_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:paddingStart="@dimen/padding5"
                        android:paddingTop="2dp"
                        android:paddingEnd="@dimen/padding15"
                        android:paddingBottom="2dp"
                        android:text="@string/app_name"
                        android:textColor="@color/orangeColor"
                        android:textSize="@dimen/font_size15"
                        android:theme="@style/StyleTextView" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:paddingStart="12dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="@dimen/padding15"
                        android:paddingBottom="2dp"
                        android:text="Phone:"
                        android:textColor="@color/offBlackColor"
                        android:textSize="@dimen/font_size15"
                        android:theme="@style/StyleTextView" />

                    <TextView
                        android:id="@+id/shakha_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:paddingStart="@dimen/padding5"
                        android:paddingTop="2dp"
                        android:paddingEnd="@dimen/padding15"
                        android:paddingBottom="2dp"
                        android:text="@string/app_name"
                        android:textColor="@color/orangeColor"
                        android:textSize="@dimen/font_size15"
                        android:theme="@style/StyleTextView" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/shakha_adapter_map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="@dimen/padding10"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/button_round_left"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/padding30"
                        android:layout_height="@dimen/padding30"
                        android:src="@drawable/get_dir" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:paddingStart="@dimen/padding10"
                        android:textAlignment="center"
                        android:text="Get Directions"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size15"
                        android:theme="@style/StyleTextView" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shakha_adapter_miles"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginStart="1dp"
                    android:padding="@dimen/padding10"
                    android:background="@drawable/button_round_right"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/padding30"
                        android:layout_height="@dimen/padding30"
                        android:src="@drawable/miles" />

                    <TextView
                        android:id="@+id/shakha_distance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textAlignment="center"
                        android:paddingStart="@dimen/padding10"
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size15"
                        android:theme="@style/StyleTextView" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>