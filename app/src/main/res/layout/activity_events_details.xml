<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/action_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_view"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding50"
                android:background="@color/primaryColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-30dp"
                android:layout_marginStart="@dimen/padding15"
                android:layout_marginEnd="@dimen/padding15"
                android:background="@drawable/button_orange_round"
                android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/padding90"
                android:layout_height="@dimen/padding90"
                android:layout_marginTop="@dimen/padding5"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/app_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding15"
                android:layout_marginEnd="@dimen/padding15"
                android:layout_marginTop="@dimen/padding10"
                android:background="@drawable/edittext_round"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/event_title_nmae"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sourcesanspro_bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/padding10"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/font_size18"
                    android:text="@string/event_name" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/font_size15"
                    android:layout_marginEnd="@dimen/font_size15"
                    android:layout_marginTop="@dimen/padding20" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/padding20">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sourcesanspro_bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size15"
                            android:text="@string/event_name" />

                        <TextView
                            android:id="@+id/event_name_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/event_name"
                            android:layout_marginTop="@dimen/padding5"
                            android:theme="@style/StyleTextView"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:textSize="@dimen/font_size18"
                            android:textColor="@color/orangeColor" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/padding20">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sourcesanspro_regular"
                            android:textColor="@color/grayColorColor"
                            android:textSize="@dimen/font_size15"
                            android:text="@string/shakha" />

                        <TextView
                            android:id="@+id/shakha_name_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/shakha"
                            android:layout_marginTop="@dimen/padding5"
                            android:theme="@style/StyleTextView"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:textSize="@dimen/font_size18"
                            android:textColor="@color/blackColor" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayColorColor"
                    android:textSize="@dimen/font_size18"
                    android:layout_marginStart="@dimen/font_size15"
                    android:layout_marginEnd="@dimen/font_size15"
                    android:layout_marginTop="@dimen/padding20"
                    android:textAllCaps="true"
                    android:text="@string/contact" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/font_size15"
                    android:layout_marginEnd="@dimen/font_size15"
                    android:layout_marginTop="@dimen/padding10" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/padding20">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grayColorColor"
                            android:textSize="@dimen/font_size15"
                            android:text="@string/email_txt" />

                        <TextView
                            android:id="@+id/email_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email_txt"
                            android:layout_marginTop="@dimen/padding5"
                            android:theme="@style/StyleTextView"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:textSize="@dimen/font_size18"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/padding20" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grayColorColor"
                            android:textSize="@dimen/font_size15"
                            android:text="@string/mobile_txt" />

                        <TextView
                            android:id="@+id/mobile_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mobile_txt"
                            android:layout_marginTop="@dimen/padding5"
                            android:theme="@style/StyleTextView"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:textSize="@dimen/font_size18"
                            android:textColor="@color/black" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayColorColor"
                    android:textSize="@dimen/font_size18"
                    android:layout_marginStart="@dimen/font_size15"
                    android:layout_marginEnd="@dimen/font_size15"
                    android:layout_marginTop="@dimen/padding20"
                    android:textAllCaps="true"
                    android:text="@string/discription" />

                <TextView
                    android:id="@+id/discription_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discription"
                    android:layout_marginStart="@dimen/font_size15"
                    android:layout_marginEnd="@dimen/font_size15"
                    android:layout_marginTop="@dimen/padding20"
                    android:theme="@style/StyleTextView"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    android:textSize="@dimen/font_size18"
                    android:textColor="@color/blackColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayColorColor"
                    android:textSize="@dimen/font_size18"
                    android:layout_marginStart="@dimen/font_size15"
                    android:layout_marginEnd="@dimen/font_size15"
                    android:layout_marginTop="@dimen/padding20"
                    android:textAllCaps="true"
                    android:text="@string/info" />

                <TextView
                    android:id="@+id/info_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info"
                    android:layout_marginStart="@dimen/font_size15"
                    android:layout_marginEnd="@dimen/font_size15"
                    android:layout_marginTop="@dimen/padding20"
                    android:theme="@style/StyleTextView"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    android:textSize="@dimen/font_size18"
                    android:textColor="@color/blackColor" />

            </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/view_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/events_list_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@color/orangeColor" >

                <ImageView
                    android:layout_width="@dimen/padding15"
                    android:layout_height="@dimen/padding20"
                    android:src="@drawable/plus_icon" />

                <TextView
                    android:id="@+id/registration_success_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:theme="@style/StyleTextView"
                    android:padding="12dp"
                    android:text="@string/book_event"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</LinearLayout>