<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding50"
                android:background="@color/primaryColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:layout_marginStart="@dimen/padding15"
            android:layout_marginEnd="@dimen/padding15"
            android:background="@drawable/edittext_round"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginEnd="@dimen/font_size15"
                android:layout_marginTop="@dimen/padding20" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/padding20">

                    <TextView
                        android:id="@+id/shakha_name_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sourcesanspro_regular"
                        android:textColor="@color/grayColorColor"
                        android:textSize="@dimen/font_size15"
                        android:text="@string/frequency" />

                    <TextView
                        android:id="@+id/user_name_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/frequency"
                        android:layout_marginTop="@dimen/padding5"
                        android:theme="@style/StyleTextView"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:textSize="@dimen/font_size18"
                        android:textColor="@color/blackColor" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginEnd="@dimen/font_size15"
                android:layout_marginTop="@dimen/padding20" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/padding20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grayColorColor"
                        android:textSize="@dimen/font_size15"
                        android:text="@string/guru_dakshina" />

                    <TextView
                        android:id="@+id/guru_dakshina_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/guru_dakshina"
                        android:layout_marginTop="@dimen/padding5"
                        android:theme="@style/StyleTextView"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:textSize="@dimen/font_size18"
                        android:textColor="@color/greenColor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/padding20" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grayColorColor"
                        android:textSize="@dimen/font_size15"
                        android:text="@string/contribution_type" />

                    <TextView
                        android:id="@+id/contribution_type_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contribution_type"
                        android:layout_marginTop="@dimen/padding5"
                        android:theme="@style/StyleTextView"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:textSize="@dimen/font_size18"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginEnd="@dimen/font_size15"
                android:layout_marginTop="@dimen/padding20" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/padding20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grayColorColor"
                        android:textSize="@dimen/font_size15"
                        android:text="@string/reference" />

                    <TextView
                        android:id="@+id/reference_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reference"
                        android:layout_marginTop="@dimen/padding5"
                        android:theme="@style/StyleTextView"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:textSize="@dimen/font_size18"
                        android:textColor="@color/blackColor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/padding20" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grayColorColor"
                        android:textSize="@dimen/font_size15"
                        android:text="@string/status" />

                    <TextView
                        android:id="@+id/status_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status"
                        android:layout_marginTop="@dimen/padding5"
                        android:theme="@style/StyleTextView"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:textSize="@dimen/font_size18"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginEnd="@dimen/font_size15"
                android:layout_marginTop="@dimen/padding20" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/padding20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grayColorColor"
                        android:textSize="@dimen/font_size15"
                        android:text="@string/date" />

                    <TextView
                        android:id="@+id/date_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date"
                        android:layout_marginTop="@dimen/padding5"
                        android:theme="@style/StyleTextView"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:textSize="@dimen/font_size18"
                        android:textColor="@color/blackColor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/padding20" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grayColorColor"
                        android:textSize="@dimen/font_size15"
                        android:text="@string/gift_aid" />

                    <TextView
                        android:id="@+id/gift_aid_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gift_aid"
                        android:layout_marginTop="@dimen/padding5"
                        android:theme="@style/StyleTextView"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:textSize="@dimen/font_size18"
                        android:textColor="@color/greenColor" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginEnd="@dimen/font_size15"
                android:layout_marginTop="@dimen/padding35"
                android:textColor="@color/grayColorColor"
                android:textSize="@dimen/font_size15"
                android:visibility="gone"
                android:text="@string/frequency_of_donation" />

            <TextView
                android:id="@+id/frequency_of_donation_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/frequency_of_donation"
                android:layout_marginTop="@dimen/padding5"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginEnd="@dimen/font_size15"
                android:theme="@style/StyleTextView"
                android:fontFamily="@font/sourcesanspro_regular"
                android:textSize="@dimen/font_size18"
                android:textColor="@color/black" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/padding35"
                android:layout_marginStart="@dimen/padding15"
                android:layout_marginEnd="@dimen/padding15"
                android:layout_weight="1"
                android:layout_gravity="center" >

                <LinearLayout
                    android:id="@+id/close_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/gray_round_border"
                    android:paddingStart="@dimen/padding35"
                    android:paddingEnd="@dimen/padding35" >

                    <ImageView
                        android:layout_width="@dimen/padding20"
                        android:layout_height="@dimen/padding20"
                        android:src="@drawable/close_round_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="@string/go_back"
                        android:fontFamily="@font/sourcesanspro_regular"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                    <!--frequency_of_donation_txt-->
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding20" />

        </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>