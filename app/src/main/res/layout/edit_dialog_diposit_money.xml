<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/padding10"
    android:background="@drawable/edittext_round"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/font_size15"
        android:layout_marginTop="@dimen/padding10"
        android:layout_marginEnd="@dimen/font_size15"
        android:background="@color/light_gray_background"
        android:hint="\u00a3  Amount"
        android:inputType="number"
        android:padding="@dimen/padding15"
        android:maxLength="8"
        android:textColor="@color/blackColor"
        android:textColorHint="@color/grayColorColor"
        android:theme="@style/StyleEditTextView" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/font_size15"
        android:layout_marginEnd="@dimen/font_size15"
        android:background="@color/lightOrangeColor" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/font_size15"
        android:layout_marginTop="@dimen/padding15"
        android:layout_marginEnd="@dimen/font_size15"
        android:layout_marginBottom="@dimen/font_size15"
        android:background="@drawable/bottom_round_layout"
        android:text="@string/ok"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_size15" />
</androidx.appcompat.widget.LinearLayoutCompat>