<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/padding10"
    android:id="@+id/adapter_view"
    android:background="@drawable/edittext_round">

    <LinearLayout
        android:id="@+id/regular_onetime_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding30"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:paddingStart="@dimen/padding15"
        android:paddingEnd="@dimen/padding15"
        android:weightSum="2" >

        <TextView
            android:id="@+id/regular_onetime_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="@dimen/font_size15"
            android:theme="@style/StyleTextView"
            android:textColor="@color/black"
            android:text="@string/regular" />

        <TextView
            android:id="@+id/regular_onetime_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="@dimen/font_size15"
            android:theme="@style/StyleTextView"
            android:textColor="@color/black"
            android:text="@string/regular"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/padding10"
        android:weightSum="2" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding15"
            android:layout_weight="1"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/username_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/firstname"
                android:theme="@style/StyleTextView"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size18"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding15"
            android:layout_weight="1"
            tools:ignore="RtlSymmetry">

            <ImageView
                android:id="@+id/righr_menu"
                android:layout_width="@dimen/padding25"
                android:layout_height="@dimen/padding15"
                android:layout_alignParentEnd="true"
                android:src="@drawable/right_menu" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/padding5"
        android:paddingStart="@dimen/padding15"
        android:paddingEnd="@dimen/padding15">

        <ImageView
            android:layout_width="@dimen/padding20"
            android:layout_height="@dimen/padding20"
            android:src="@drawable/my_shakha_icon" />

    <TextView
        android:id="@+id/user_shakha_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shakha_name"
        android:layout_marginStart="@dimen/padding10"
        android:theme="@style/StyleTextView"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/padding5"
        android:layout_marginTop="@dimen/padding5"
        android:weightSum="3" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/padding5"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/guru_dakshina_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guru_dakshina"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/padding5"
                android:theme="@style/StyleTextView"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size15"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/amount_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/padding5"
                android:layout_marginEnd="@dimen/padding5"
                android:theme="@style/StyleTextView"
                android:textColor="@color/greenColor"
                android:textSize="@dimen/font_size20"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right|center_vertical"
            android:layout_gravity="center_vertical"
            tools:ignore="RtlHardcoded,RtlSymmetry">

            <TextView
                android:id="@+id/date_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15/03/2021"
                android:textAlignment="textEnd"
                android:layout_marginStart="@dimen/padding15"
                android:layout_marginEnd="@dimen/padding15"
                android:theme="@style/StyleTextView"
                android:textColor="@color/grayColorColor"
                android:textSize="@dimen/font_size13"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>