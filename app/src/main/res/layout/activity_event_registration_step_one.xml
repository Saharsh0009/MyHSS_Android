<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical"
    tools:context="com.myhss.ui.events.EventRegistrationStepOneActivity">

    <include
        android:id="@+id/topbar"
        layout="@layout/action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/font_size30"
                android:layout_margin="@dimen/font_size15"
                android:src="@drawable/payment_first_top" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding15"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginEnd="@dimen/padding15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/registration_for_self_or_family"
                    android:textColor="@color/grayColorColor"
                    android:textSize="@dimen/font_size15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/padding10"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textAlignment="center"
                    android:textColor="@color/redColor"
                    android:theme="@style/StyleTextView"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/font_size15"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginEnd="@dimen/font_size15"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/event_regis_self_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding10"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_round"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding60"
                        android:padding="@dimen/padding10">

                        <TextView
                            android:id="@+id/event_reg_self_yes_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/self"
                            android:textColor="@color/grayColorColor"
                            android:textSize="@dimen/font_size15"
                            android:theme="@style/StyleTextView" />

                        <ImageView
                            android:id="@+id/event_reg_self_yes_icon"
                            android:layout_width="@dimen/padding25"
                            android:layout_height="@dimen/padding25"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/padding10"
                            android:src="@drawable/righttikmark_gray_icon" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/event_reg_family_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding10"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_round"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding60"
                        android:padding="@dimen/padding10">

                        <TextView
                            android:id="@+id/event_reg_family_yes_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="@string/donating_family"
                            android:textColor="@color/grayColorColor"
                            android:textSize="@dimen/font_size15"
                            android:theme="@style/StyleTextView" />

                        <ImageView
                            android:id="@+id/event_reg_family_yes_img"
                            android:layout_width="@dimen/padding25"
                            android:layout_height="@dimen/padding25"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/padding10"
                            android:src="@drawable/righttikmark_gray_icon" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding15"
                android:layout_marginTop="@dimen/padding10"
                android:layout_marginEnd="@dimen/padding15"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_self_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding10"
                        android:text="@string/name_txt"
                        android:textColor="@color/grayColorColor"
                        android:textSize="@dimen/font_size15" />

                    <TextView
                        android:id="@+id/event_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rahul Deshpande"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size15" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding10"
                        android:text="@string/contact"
                        android:textColor="@color/grayColorColor"
                        android:textSize="@dimen/font_size15" />

                    <TextView
                        android:id="@+id/event_user_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="rahul@gmail.com"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size15" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding10"
                        android:text="@string/sakha_branch"
                        android:textColor="@color/grayColorColor"
                        android:textSize="@dimen/font_size15" />

                    <TextView
                        android:id="@+id/event_user_sakha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bradford Krishna Balagokulam"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size15" />


                    <TextView
                        android:id="@+id/event_user_update_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding10"
                        android:text="@string/if_you_want_to_update_details_please_click_on_this_link_update_user_profile"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size15" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_family_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding10"
                        android:text="@string/select_family_member"
                        android:textColor="@color/grayColorColor"
                        android:textSize="@dimen/font_size15" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/EditText.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/padding10"
                        android:background="@drawable/edittext_round"
                        android:gravity="center_vertical"
                        app:boxStrokeColor="@color/primaryColor"
                        tools:ignore="RtlSymmetry">

                        <Spinner
                            android:id="@+id/spinner_family"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:hint="@string/relationship_primery"
                            android:tag="@string/occupation_select_other"
                            android:textColor="@color/blackColor"
                            android:textColorHint="@color/grayColorColor"
                            android:theme="@style/StyleEditTextView" />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/event_label_medical_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding20"
                    android:text="@string/specify_medical_info_if_different_from_your_profile"
                    android:textColor="@color/grayColorColor"
                    android:textSize="@dimen/font_size15" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_medical_info"
                    style="@style/EditText.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/padding5"
                    android:background="@drawable/edittext_round"
                    app:boxStrokeColor="@color/primaryColor"
                    app:errorIconDrawable="@null">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_medical_info"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding50"
                        android:background="@android:color/transparent"
                        android:cursorVisible="true"
                        android:gravity="left"
                        android:inputType="text"
                        android:scrollbars="none"
                        android:textColor="@color/blackColor"
                        android:textColorHint="@color/grayColorColor"
                        android:textCursorDrawable="@null"
                        android:theme="@style/StyleEditTextView" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding20"
                    android:text="@string/medication_you_take"
                    android:textColor="@color/grayColorColor"
                    android:textSize="@dimen/font_size15" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_medical_type"
                    style="@style/EditText.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/padding5"
                    android:background="@drawable/edittext_round"
                    app:boxStrokeColor="@color/primaryColor"
                    app:errorIconDrawable="@null">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_medical_type"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding50"
                        android:background="@android:color/transparent"
                        android:cursorVisible="true"
                        android:gravity="left"
                        android:inputType="text"
                        android:scrollbars="none"
                        android:textColor="@color/blackColor"
                        android:textColorHint="@color/grayColorColor"
                        android:textCursorDrawable="@null"
                        android:theme="@style/StyleEditTextView" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding20"
                    android:text="@string/do_you_carry_an_epipen_jext_emerade"
                    android:textColor="@color/grayColorColor"
                    android:textSize="@dimen/font_size15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/event_epipen_yes_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/padding10"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_round"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/padding60"
                            android:padding="@dimen/padding10">

                            <TextView
                                android:id="@+id/event_epipen_yes_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:text="@string/yes"
                                android:textColor="@color/grayColorColor"
                                android:textSize="@dimen/font_size15"
                                android:theme="@style/StyleTextView" />

                            <ImageView
                                android:id="@+id/event_epipen_yes_icon"
                                android:layout_width="@dimen/padding25"
                                android:layout_height="@dimen/padding25"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/padding10"
                                android:src="@drawable/righttikmark_gray_icon" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/event_epipen_no_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding10"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_round"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/padding60"
                            android:padding="@dimen/padding10">

                            <TextView
                                android:id="@+id/event_epipen_no_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:text="@string/no"
                                android:textColor="@color/grayColorColor"
                                android:textSize="@dimen/font_size15"
                                android:theme="@style/StyleTextView" />

                            <ImageView
                                android:id="@+id/event_epipen_no_img"
                                android:layout_width="@dimen/padding25"
                                android:layout_height="@dimen/padding25"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/padding10"
                                android:src="@drawable/righttikmark_gray_icon" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/padding10"
                    android:layout_marginEnd="@dimen/padding10"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/back_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/button_orange_round"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/padding35"
                        android:paddingEnd="@dimen/padding35">

                        <ImageView
                            android:layout_width="@dimen/padding15"
                            android:layout_height="@dimen/padding20"
                            android:src="@drawable/prevarrowblue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sourcesanspro_regular"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="@string/prev"
                            android:textColor="@color/primaryColor"
                            android:textSize="18sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/padding10"
                    android:layout_marginEnd="@dimen/padding10"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/next_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/button_round"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/padding35"
                        android:paddingEnd="@dimen/padding35">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sourcesanspro_regular"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="@string/next"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="@dimen/padding15"
                            android:layout_height="@dimen/padding20"
                            android:src="@drawable/nextarrowwhite" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>